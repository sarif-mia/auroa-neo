{%- liquid
  assign img_ratio = settings.default_img_ratio
  assign img_ratio_resize = settings.card_img_resize
  if img_ratio_resize == 'contain'
    assign img_ratio = 'fit-' | append: img_ratio
  endif

  if section.settings.img_ratio != 'default'
    assign img_ratio = section.settings.img_ratio

    if section.settings.img_ratio_resize == 'fit'
      assign img_ratio = 'fit-' | append: img_ratio
    endif
  endif

  assign enable_image_zoom = section.settings.enable_image_zoom
  assign enable_video_autoplay = section.settings.enable_video_autoplay
  assign enable_video_looping = section.settings.enable_video_looping
  assign enable_video_controls = section.settings.enable_video_controls
  assign enable_darken_mode = false
  if settings.enable_product_darken_background and settings.darken_background_mix_mode != 'none'
    assign enable_darken_mode = true
  endif

  assign mobile_layout = section.settings.mobile_layout
  assign enable_content_slide_in = settings.enable_content_slide_in

  assign layout_with_full_screen = false
  if mobile_layout contains 'thumbnails'
    assign layout_with_full_screen = true
  endif
-%}

<div
  data-product-media-container
  class='product-desktop-media {% if enable_content_slide_in %}scroll-trigger animate--slide-in{% endif %}'
  {% if enable_content_slide_in %}
    style='--gsc-animation-order: 1;'
  {% endif %}
>
  {% if block_layout contains 'thumbnails' %}
    {%
      render 'product-media-carousel',
      product: product,
      media_array: media_array,
      featured_media: featured_media,
      section: section,
      sectionId: sectionId
      block: block,
      block_layout: block_layout,
      img_ratio: img_ratio,
      enable_image_zoom:enable_image_zoom,
      enable_video_autoplay:enable_video_autoplay,
      enable_video_looping:enable_video_looping,
      enable_video_controls:enable_video_controls,
      enable_darken_mode:enable_darken_mode,
      mobile_layout:mobile_layout,
      enable_content_slide_in:enable_content_slide_in,
    %}
  {% else %}
    {%
      render 'product-media-grid',
      product: product,
      media_array: media_array,
      featured_media: featured_media,
      section: section,
      sectionId: sectionId
      block: block,
      block_layout: block_layout,
      img_ratio: img_ratio,
      enable_image_zoom:enable_image_zoom,
      enable_video_autoplay:enable_video_autoplay,
      enable_video_looping:enable_video_looping,
      enable_video_controls:enable_video_controls,
      enable_darken_mode:enable_darken_mode,
      mobile_layout:mobile_layout,
      enable_content_slide_in:enable_content_slide_in,
    %}
  {% endif %}
</div>

<div
  data-product-media-container
  class='product-mobile-media {% if media_array.size < 3 and layout_with_full_screen == false %} product-mobile-media--full-screen {% endif %} {% if mobile_layout contains 'carousel' or mobile_layout == 'slideshow-linear' %} product-mobile-media--full-screen {% endif %} {% if enable_content_slide_in %}scroll-trigger animate--slide-in{% endif %}'
  {% if enable_content_slide_in %}
    style='--gsc-animation-order: 1;'
  {% endif %}
>
  {% if media_array.size == 1 -%}
    {%
      render 'product-media-grid',
      product: product,
      media_array: media_array,
      featured_media: featured_media,
      section: section,
      sectionId: sectionId
      block: block,
      block_layout: mobile_layout,
      img_ratio: img_ratio,
      enable_image_zoom:enable_image_zoom,
      enable_video_autoplay:enable_video_autoplay,
      enable_video_looping:enable_video_looping,
      enable_video_controls:enable_video_controls,
      enable_darken_mode:enable_darken_mode,
      mobile_layout:mobile_layout,
      enable_content_slide_in:enable_content_slide_in,
    %}
  {% else %}
    {%
      render 'product-media-carousel-mobile',
      product: product,
      media_array: media_array,
      featured_media: featured_media,
      section: section,
      sectionId: sectionId
      block: block,
      block_layout: mobile_layout,
      img_ratio: img_ratio,
      enable_image_zoom:enable_image_zoom,
      enable_video_autoplay:enable_video_autoplay,
      enable_video_looping:enable_video_looping,
      enable_video_controls:enable_video_controls,
      enable_darken_mode:enable_darken_mode,
      mobile_layout:mobile_layout,
      enable_content_slide_in:enable_content_slide_in,
    %}
  {% endif %}
</div>
