{%- liquid
  assign options = block.settings
  assign collection = options.collection
  assign show_product_count = options.show_product_count
  assign image = options.image | default: collection.image
  assign video = options.video
  assign caption = options.caption
  assign title = options.title
  assign text = options.text
  assign link_text = options.link_text
  assign link = options.link
  assign product = options.product
  assign content_position = options.content_position
  assign body_size = options.body_size
  assign heading_size = options.heading_size
  assign quote_alignment = options.quote_alignment

  assign product_card_align = options.product_card_align

  assign btn_style = options.btn_style | default: 'link'
  assign hover_effect = options.hover_effect
  assign show_rating = options.show_rating

  assign enable_overlay = options.enable_overlay

  assign section_color_scheme = settings.default_color_scheme
  if section.settings.color_scheme_variant == 'own'
    assign color_scheme = section.settings.color_scheme
  endif

  assign color_scheme = section_color_scheme
  if options.color_scheme_variant == 'own'
    assign color_scheme = options.color_scheme
  endif

  if options.color_scheme_variant == 'custom'
    assign color_scheme = blank
    assign btn_style = 'primary'
    if options.btn_style == 'link'
      assign btn_style = 'link'
    endif
  endif
-%}

{% liquid
  assign swatch_patterns = settings.primary_custom_colors_and_patterns
  assign primary_custom_colors_and_patterns = swatch_patterns | newline_to_br | split: '<br />'
%}

{% capture section_background_color %}
  {% render 'get-section-background-color', section: section %}
{% endcapture %}

{% case block.type %}
  {% when 'collection' %}
    {% render 'collection-card',
      class: 'collage__collection-card',
      img_ratio: 'adapt',
      enable_overlay: enable_overlay,
      color_scheme: color_scheme,
      heading_size: heading_size,
      content_position: content_position,
      title: collection.title,
      img: image,
      collection: collection,
      text_style: 'on-image-top',
      show_product_count: show_product_count,
      link_text: link_text,
      btn_style: btn_style,
      link_url: collection.url,
      hover_effect: hover_effect,
      animate_image: true
    %}
  {% when 'image' %}
    {% render 'image-block',
      class: 'collage__image-block',
      img_ratio: 'adapt',
      enable_overlay: enable_overlay,
      color_scheme: color_scheme,
      heading_size: heading_size,
      body_size: body_size,
      caption: caption,
      title: title,
      text: text,
      image: image,
      video: video,
      link: link,
      link_text: link_text,
      btn_style: btn_style,
      hover_effect: hover_effect
    %}
  {% when 'product' %}
    {% render 'product-card',
      class: 'collage__product-card',
      product: product,
      color_swatches_when_to_show: 'on_hover',
      card_style: 'solid',
      img_ratio: 'adapt',
      product_card_align: product_card_align,
      add_side_paddings: add_side_paddings,
      primary_custom_colors_and_patterns: primary_custom_colors_and_patterns,
      section_background_color: section_background_color
    %}
  {% when 'quote' %}
    {% render 'quote',
      class: 'collage__quote',
      block: block,
      quote_alignment: quote_alignment,
      with_background: true,
      show_rating: show_rating
    %}
  {% when 'rich-text' %}
    {% render 'rich-text-block', class: 'collage__rich-text', block: block %}
{% endcase %}
