{%- liquid
  assign options = section.settings

  assign color_scheme = settings.default_color_scheme
  if options.color_scheme_variant == 'own'
    assign color_scheme = options.color_scheme
  endif
  assign round_level = options.round_level
  assign add_desktop_side_paddings = options.add_desktop_side_paddings
  assign add_mobile_side_paddings = options.add_mobile_side_paddings
  assign section_spacing_top = options.section_spacing_top
  assign section_spacing_bottom = options.section_spacing_bottom
  assign title = options.title
  assign collections_to_show = options.collections_to_show
  assign collection_per_page = options.collection_per_page
  assign img_ratio = options.img_ratio
  assign text_style = options.text_style
  assign collection_card_content_align = options.collection_card_content_align
  assign show_product_count = options.show_product_count
  assign mobile_columns = 1
  assign desktop_columns = options.desktop_columns
  assign container_size = options.container_size
  assign pagination_type = options.pagination_type
  assign collection_list = options.collection_list
  assign collection_card_heading_size = options.collection_card_heading_size
  assign heading_size = options.heading_size
  assign heading_alignment = options.heading_alignment

  assign enable_content_slide_in = settings.enable_content_slide_in
-%}

{%- liquid
  assign show_background = section.settings.show_background
  assign color_container_background = false

  if show_background == false and settings.default_color_scheme.settings.background != color_scheme.settings.background
    assign color_container_background = true
  endif
-%}

{% if section.settings.text_style contains 'on-image' %}
  {%- liquid
    assign cards_color_scheme_variant = options.cards_color_scheme_variant
    assign current_overlay_color_scheme = color_scheme

    if cards_color_scheme_variant == 'own'
      assign current_overlay_color_scheme = options.cards_color_scheme
    endif

    assign custom_overlay_color = current_overlay_color_scheme.settings.background.rgb | replace: ' ', ', '
    assign custom_text_color = current_overlay_color_scheme.settings.text

    assign enable_overlay = true

    if cards_color_scheme_variant == 'custom'
      assign custom_overlay_color = options.cards_overlay_color.rgb | replace: ' ', ', '
      assign custom_text_color = options.cards_title_color
    endif
  -%}
{% endif %}

{% capture css %}
  {% style %}
    .section-{{ section.id }} {
      --gsc-columns: {{ mobile_columns }};
      --gsc-space-between-cards: var(--gsc-gap-{{ section.settings.space_between_cards_mobile }});  
      --gsc-section-spacing-top: var(--gsc-padding-block-{{ section_spacing_top }});
      --gsc-section-spacing-bottom: var(--gsc-padding-block-{{ section_spacing_bottom }}); 

      --gsc-collection-card-title-color: {{ custom_text_color }};

      {% if section.settings.text_style contains 'on-image' %}
          --gsc-collection-card-overlay-color: {{ custom_overlay_color  }};
          --gsc-collection-card-overlay-opacity: {{ options.cards_overlay_opacity |  divided_by: 100.00 }};
      {% endif %}
    }

    @media {% render 'media-queries', screen: 'md' %} {
        .section-{{ section.id }} {
          --gsc-space-between-cards: var(--gsc-gap-{{ section.settings.space_between_cards }});  
          --gsc-columns: {{ desktop_columns }};
        }
    }
  {% endstyle %}
{% endcapture %}

{% render 'inline-css-minifier', css: css %}

<div class='collection-list {% if round_level != 'default' %}round-level-{{round_level}}{% endif %} section section-{{ section.id }} color-{{ color_scheme }} spacing-block {% if add_mobile_side_paddings %}spacing-inline-mobile{% endif %} {% if add_desktop_side_paddings %}spacing-inline-desktop{% endif %} {% if color_container_background == false %}section-background{% endif %}'>
  <div class='container container--{{ container_size }} {% if color_container_background %}container-background{% endif %}'>
    {%- if title != blank -%}
      <div
        class='collection-list__header {% if heading_alignment != 'left' %}collection-list__header--{{heading_alignment}}{% endif %} {% if enable_content_slide_in %}scroll-trigger animate--slide-in{% endif %}'
        {% if enable_content_slide_in %}
          style='--gsc-animation-order: 1;'
        {% endif %}
      >
        <h2 class='{{ heading_size }}'>{{ title }}</h2>
      </div>
    {%- endif -%}

    {%- if collections_to_show == 'all' -%}
      {%- paginate collections by collection_per_page -%}
        <div class='collection-list__card-grid-wrap'>
          <div class='card-grid collection-list__card-grid' id='CollectionListGrid'>
            {%- for collection in collections -%}
              <div
                class='card-grid__item {% if enable_content_slide_in %}scroll-trigger animate--slide-in{% endif %}'
                {% if enable_content_slide_in %}
                  style='--gsc-animation-order: {{forloop.index}};'
                {% endif %}
              >
                {% render 'collection-card',
                  with_bottom_spacing: true,
                  title: collection.title,
                  enable_overlay: enable_overlay,
                  color_scheme: current_overlay_color_scheme,
                  heading_size: collection_card_heading_size,
                  img: collection.image,
                  content_align: collection_card_content_align,
                  img_ratio: img_ratio,
                  collection: collection,
                  text_style: text_style,
                  show_product_count: show_product_count
                %}
              </div>
            {%- endfor -%}
          </div>
          {%- render 'loading-overlay', class: 'shop__loading-overlay', id: 'CollectionListResultsOverlay' -%}
        </div>

        {%- case pagination_type -%}
          {%- when 'load-button-pagination' -%}
            {% render 'load-button-pagination',
              class: 'collection-list__load-button-pagination',
              paginate: paginate,
              target: 'collection-card',
              container_id: 'CollectionListGrid',
              all_count: collections.size,
              current_size: paginate.page_size
            %}
          {%- when 'classic-pagination' -%}
            {% render 'classic-pagination',
              class: 'collection-list__classic-pagination',
              paginate: paginate,
              overlay_id: 'CollectionListResultsOverlay',
              container_id: 'CollectionListGrid'
            %}
          {%- when 'infinite-scroll' -%}
            {% render 'infinite-scroll-pagination',
              class: '',
              paginate: paginate,
              target: 'collection-card',
              container_id: 'CollectionListGrid'
            %}
        {%- endcase -%}
      {%- endpaginate -%}
    {%- else -%}
      <div class='card-grid collection-list__card-grid'>
        {%- for collection in collection_list -%}
          <div
            class='card-grid__item {% if enable_content_slide_in %}scroll-trigger animate--slide-in{% endif %}'
            {% if enable_content_slide_in %}
              style='--gsc-animation-order: {{forloop.index}};'
            {% endif %}
          >
            {% render 'collection-card',
              with_bottom_spacing: true,
              content_align: collection_card_content_align,
              title: collection.title,
              heading_size: collection_card_heading_size,
              img: collection.image,
              img_ratio: img_ratio,
              collection: collection,
              text_style: text_style,
              show_product_count: show_product_count
            %}
          </div>
        {%- endfor -%}
      </div>
    {%- endif -%}
  </div>
</div>

