{%- liquid
  assign options = section.settings
  assign add_desktop_side_paddings = options.add_desktop_side_paddings
  assign add_mobile_side_paddings = options.add_mobile_side_paddings
  assign section_spacing_top = options.section_spacing_top
  assign section_spacing_bottom = options.section_spacing_bottom
  assign color_scheme = settings.default_color_scheme
  if options.color_scheme_variant == 'own'
    assign color_scheme = options.color_scheme
  endif
  assign round_level = options.round_level
  assign title = options.title
  assign alignment = options.alignment
  assign container_size = options.container_size


  assign mobile_columns = options.mobile_columns
  assign desktop_columns = options.desktop_columns
  assign desktop_carousel_percent_width = 100.0
  assign heading_size = options.heading_size

  assign desktop_columns_float = desktop_columns | times: 1.0
  assign desktop_slide_width = 100 | divided_by: desktop_columns_float

  assign desktop_layout = options.desktop_layout
  assign mobile_layout = options.mobile_layout

  assign show_navigation_arrows = options.show_navigation_arrows
  assign autoplay_mode = options.autoplay_mode
  assign autoplay_interval = options.autoplay_interval

  assign enable_content_slide_in = settings.enable_content_slide_in
-%}


{%- liquid
  assign show_background = section.settings.show_background
  assign color_container_background = false

  if show_background == false and settings.default_color_scheme.settings.background != color_scheme.settings.background
    assign color_container_background = true
  endif
-%}


{% capture css %}
  {% style %}
    {% for block in section.blocks %}
        .block-{{ block.id }} {
            --gsc-image-width: {{ block.settings.image_width }}%;
            --gsc-logo-list-image-aspect-ratio: {{ block.settings.image.aspect_ratio }};
        }
    {% endfor %}

    .section-{{ section.id }} {
        --gsc-columns: {{ mobile_columns }};
        --gsc-slide-width: 50%;
        --gsc-space-between-cards: var(--gsc-gap-{{ section.settings.space_between_cards_mobile }});  
        --gsc-section-spacing-top: var(--gsc-padding-block-{{ section_spacing_top }});
        --gsc-section-spacing-bottom: var(--gsc-padding-block-{{ section_spacing_bottom }});
    }

    @media {% render 'media-queries', screen: 'md' %} {
        .section-{{ section.id }} {
          --gsc-columns: {{ desktop_columns }};
          --gsc-slide-width: {{ desktop_slide_width }}%;
          --gsc-space-between-cards: var(--gsc-gap-{{ section.settings.space_between_cards }});  
        }
    }

    {% if desktop_layout == 'carousel' %}
      .section-{{section.id}}{
          --gsc-slide-width: {{ desktop_carousel_percent_width | times: 1.00 | divided_by: desktop_columns }}%;
      }

      @media {% render 'media-queries', screen: 'md' %} {
        .section-{{section.id}}{
          --gsc-slide-width: {{ desktop_carousel_percent_width | times: 1.00 | divided_by: desktop_columns }}%;
        }
      }
    {% endif %}
  {% endstyle %}
{% endcapture %}

{% render 'inline-css-minifier', css: css %}

{% capture heading %}
  {%- if title != blank -%}
    <div class='{% if color_container_background == false and add_desktop_side_paddings == false or add_mobile_side_paddings == false  %}spacing-inline-header{% endif %} logo-list__header {% if alignment == 'center' %} logo-list__header--center {% elsif alignment == 'right' %} logo-list__header--right {% endif %} {% if enable_content_slide_in %}scroll-trigger animate--slide-in{% endif %}'
      {% if enable_content_slide_in %}
        style='--gsc-animation-order: 1;'
      {% endif %}
    >
      <h2 class='logo-list__title {{ heading_size }}'>{{ title }}</h2>
    </div>
  {%- endif -%}
{% endcapture %}

<div class='logo-list {% if round_level != 'default' %}round-level-{{round_level}}{% endif %} section section-{{ section.id }} color-{{ color_scheme }} spacing-block {% if add_mobile_side_paddings %}spacing-inline-mobile{% endif %} {% if add_desktop_side_paddings %}spacing-inline-desktop{% endif %} {% if color_container_background == false %}section-background{% endif %}'>
  <div class='logo-list__container container container--{{ container_size }} {% if show_navigation_arrows == 'on_hover' %}logo-list__container--with-navigation-on-hover{% endif %} {% if color_container_background %}container-background{% endif %}'>
    {%- if title != blank -%}
      {{ heading }}
    {%- endif -%}

    <slider-grid
      class='slider-grid {% if desktop_layout == 'carousel' or mobile_layout == 'carousel' %}logo-list__slider-grid{% endif %} {% if request.design_mode %}is-editor-mode{% endif %}'
      {% if autoplay_mode != 'disabled' %}
        autoplay-mode='{{autoplay_mode}}'
        autoplay-interval='{{autoplay_interval}}'
      {% endif %}
      {% if desktop_layout contains 'grid' %}
        desktop-disabled
      {% endif %}
      {% if mobile_layout contains 'column' %}
        mobile-disabled
      {% endif %}
    >
      {% if desktop_layout contains 'carousel' and show_navigation_arrows != 'never' and section.blocks.size > desktop_columns %}
        <button
          type='button'
          class='logo-list__carousel-btn logo-list__carousel-btn--mobile-hide'
          data-direction='prev'
          tabindex='0'
            disabled
        >
          {% render 'icon', icon_name: 'chevron', class: 'logo-list__chevron x-flip' %}
        </button>
      {% endif %}

      {% if desktop_layout == 'carousel' or mobile_layout == 'carousel' %}
        <div class="logo-list__slider-grid-track--d-carousel">
      {% endif %}

      <div
        slider-grid-track
        class='slider-grid-track slider-grid__d-{{desktop_layout}} slider-grid__m-{{mobile_layout}} {% if desktop_layout == 'grid' %}logo-list__slider-grid-track--d-grid{% endif %}'
      >
        {%- for block in section.blocks -%}
          {%- liquid
            assign image = block.settings.image
            assign link = block.settings.link
          -%}

          <div
            class='slider-grid__slide block-{{ block.id }} {% if enable_content_slide_in %}scroll-trigger animate--slide-in{% endif %}'
            {% if enable_content_slide_in %}
              style='--gsc-animation-order: {{forloop.index}};'
            {% endif %}
            slider-grid-slide
            {% if mobile_layout == 'slideshow' %}
              index='{{ forloop.index0 }}'
            {% endif %}
          >
            <a
              class='logo-list__link'
              {% if link.url != blank %}
                href='{{ link.url }}'
              {% endif %}
              aria-label='{% if link.title %}{{ link.title | strip_html | escape }}{% endif %}'
            >
              {%- if image != blank -%}
                <img
                  {% render 'image-attributes', image: image, size: 'medium', class: 'logo-list__image' %}
                >
              {%- else -%}
                {{ 'image' | placeholder_svg_tag: 'logo-list__placeholder-image placeholder-image' }}
              {%- endif -%}
            </a>
          </div>
        {%- endfor -%}
      </div>

      {% if desktop_layout == 'carousel' or mobile_layout == 'carousel' %}
        </div>
      {% endif %}

      {% if desktop_layout contains 'carousel' and show_navigation_arrows != 'never' and section.blocks.size > desktop_columns %}
        <button
          type='button'
          class='logo-list__carousel-btn logo-list__carousel-btn--mobile-hide'
          data-direction='next'
          tabindex='0'
            disabled
        >
          {%- render 'icon', icon_name: 'chevron', class: 'logo-list__chevron' -%}
        </button>
      {% endif %}
    </slider-grid>
  </div>
</div>


