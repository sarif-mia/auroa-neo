{% liquid
  assign color_scheme = settings.default_color_scheme
  if section.settings.color_scheme_variant == 'own'
    assign color_scheme = section.settings.color_scheme
  endif
  assign round_level = section.settings.round_level
  assign enable_content_slide_in = settings.enable_content_slide_in
  assign enable_image_zoom_out = settings.enable_image_zoom_out
  assign add_desktop_side_paddings = section.settings.add_desktop_side_paddings
  assign add_mobile_side_paddings = section.settings.add_mobile_side_paddings
  assign section_spacing_top = section.settings.section_spacing_top
  assign section_spacing_bottom = section.settings.section_spacing_bottom

  assign background_image_class = 'scrolling-text__background-image'
  if enable_image_zoom_out
    assign background_image_class = background_image_class | append: ' scroll-trigger animate--zoom-out'
  endif

  assign lines_limit = section.blocks.size
  if section.settings.section_layout == 'crossed'
    assign lines_limit = 2
  endif
%}

{%- liquid
  assign show_background = section.settings.show_background
  assign color_container_background = false

  if show_background == false and settings.default_color_scheme.settings.background != color_scheme.settings.background
    assign color_container_background = true
  endif
-%}

{% capture css %}
  {% style %}
    .section-{{section.id}} {
      --gsc-section-spacing-top: var(--gsc-padding-block-{{ section_spacing_top }});
      --gsc-section-spacing-bottom: var(--gsc-padding-block-{{ section_spacing_bottom }});
      --gsc-section-rotation: {{ section.settings.inclination_degree }}deg;
      
      {%if section.settings.background_image_enable_overlay %}
          --gsc-bg-image-overlay-color: {{ section.settings.background_image_overlay_color }};
      {% endif %}

      {%if section.settings.inclination_degree > 0 %}
          --gsc-section-rotation-negative: -{{ section.settings.inclination_degree }}deg;
      {% else %}
          --gsc-section-rotation-negative: {{ section.settings.inclination_degree | abs }}deg;
      {% endif %}

      {% if section.settings.section_layout == "crossed" and section.blocks.size > 1 %}
          --gsc-section-transform-origin: {{ section.settings.crossing_point_position | times: 0.55 }}%;
      {% endif %}

      --gsc-section-translate-when-inclined: {{ section.settings.inclination_degree | divided_by: 1.5 }}%;
    }

    {% for block in section.blocks limit: lines_limit %}
      .block-{{ block.id }} {
          --gsc-section-font-size: {{ block.settings.font_size }}px;
          --gsc-section-mobile-font-size: {{ block.settings.font_size }}px;
          --gsc-section-top-spacing: {{ block.settings.top_spacing }}px;
          --gsc-section-bottom-spacing: {{ block.settings.bottom_spacing }}px;
          --gsc-section-letter-spacing: {{ block.settings.letter_spacing }}px;
          --gsc-section-icon-size: {{ block.settings.icon_size }}px;
          --gsc-section-spacing-between-messages: {{ block.settings.spacing_between_messages }}px;
          --gsc-section-scrolling-direction: {{ block.settings.scrolling_direction }};
          --gsc-custom-image-ratio: {{ block.settings.custom_image_ratio }};

          {% if block.settings.font_size > 100 %}
            --gsc-section-mobile-font-size: 100px;
          {% endif %}

          {% if block.settings.scrolling_speed == 0 %}
            --gsc-section-scrolling-speed: 0s;
          {% else %}
            {% assign items_count = 0 %}

            {% if block.settings.products != blank %}
              {% assign items_count = block.settings.products.count %}
            {% endif %}
            {% if block.settings.collections != blank %}
              {% assign items_count = block.settings.collections.count %}
            {% endif %}            

            {% assign second = block.settings.scrolling_speed | divided_by: 101.00 | times: 25 %}
            {% assign result = 26 | minus: second %}

            {% if block.type == 'announcement' and block.settings.font_style == 'mixed' %}
              {% assign result = result | times: 2.00 %}
            {% endif %}            

            {% if items_count != 0 %}
              {% assign result = result | times: items_count %}
              {% if block.settings.font_style == 'mixed' %}
                {% assign result = result | times: 2.00 %}
              {% endif %}
            {% endif %}

            --gsc-section-scrolling-speed: {{ result }}s;
          {% endif %}

          {% if block.settings.background_color_gradient == blank %}
            {% if block.settings.background_color.alpha == 0 %}
              --gsc-section-background: {{ section.settings.color_scheme.settings.background }};
            {% else %}
              --gsc-section-background: {{ block.settings.background_color }};
            {% endif %}

          {% else %}
              --gsc-section-background: {{ block.settings.background_color_gradient }};
          {% endif %}

          {% if block.settings.text_color_gradient == blank %}
              --gsc-section-text-color: {{ block.settings.text_color }};
            {% else %}
              --gsc-section-text-color: {{ block.settings.text_color_gradient }};
          {% endif %}

          {% if section.settings.section_layout == "crossed" and section.blocks.size > 1 and forloop.last %}
              --gsc-section-rotate-degree: var(--gsc-section-rotation-negative);
            {% else %}
              --gsc-section-rotate-degree: var(--gsc-section-rotation);
          {% endif %}
      }
    {% endfor %}
  {% endstyle %}
{% endcapture %}

{% render 'inline-css-minifier', css: css %}

<scrolling-text
  class='scrolling-text-section {% if round_level != 'default' %}round-level-{{round_level}}{% endif %} section-{{ section.id }} color-{{ color_scheme }} spacing-block {% if add_mobile_side_paddings %}spacing-inline-mobile{% endif %} {% if add_desktop_side_paddings %}spacing-inline-desktop{% endif %} {% if color_container_background == false %}section-background{% endif %}'
  data-section-id='{{ section.id }}'
>
  <div class='container container--{{ section.settings.container_size }} scrolling-text__outer-container {% if color_container_background %}container-background{% endif %} {% if enable_content_slide_in %}scroll-trigger animate--slide-in{% endif %}'
    {% if enable_content_slide_in %}
      style='--gsc-animation-order: 1;'
    {% endif %}
  >
    <div
      class='scrolling-text__inner-container {% if section.settings.inclination_degree != 0 %} scrolling-text__inner-container--with-overflow {% endif %} {% if section.settings.background_image == blank %}scrolling-text__inner-container--without-raduis{% endif %}'
      data-scrolling-text-container
    >
      <div class='scrolling-text__background'>
        {% if section.settings.background_image != blank %}
          <img
            {% render 'image-attributes',
              image: section.settings.background_image,
              size: 'medium',
              class: background_image_class
            %}
          >

          {% if section.settings.background_image_enable_overlay %}
            <div class='scrolling-text__background-image-overlay'></div>
          {% endif %}
        {% endif %}
      </div>

      {% if section.settings.section_layout == 'parallel' %}
        <div class='scrolling-text__inner-container--parallel'>
      {% endif %}

      {% for block in section.blocks limit: lines_limit %}
        {% case block.type %}
          {% when 'announcement-products' %}
              {% render 'scrolling-text-line-with-items', items: block.settings.products, block: block, section: section %}
          {% when 'announcement-collections' %}
              {% render 'scrolling-text-line-with-items', items: block.settings.collections, block: block, section: section %}
          {% else %}
            {% render 'scrolling-text-line', block: block, section: section %}            
        {% endcase %}
      {% endfor %}

      {% if section.settings.section_layout == 'parallel' %}
        </div>
      {% endif %}
    </div>
  </div>
</scrolling-text>

