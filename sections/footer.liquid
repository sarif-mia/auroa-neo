                        {%- if block.settings.text != blank -%}
                          <div class='rte footer__text {{ block.settings.body_size }} body-color body-font-weight-from-global-settings'>
                            {{ block.settings.text }}
                          </div>
                        {%- endif -%}
                      </div>
                    </div>
                  </accordeon-component>
                {% endif %}

                <div
                  class='footer__block block-{{ block.id }} {% if mobile_block_style != 'static' %}footer__block--mobile-hidden{% else %}footer__block--mobile-static{% endif %} {% if enable_content_slide_in %}scroll-trigger animate--slide-in{% endif %}'
                  {% if enable_content_slide_in %}
                    style='--gsc-animation-order: {{forloop.index}};'
                  {% endif %}
                  {{ block.shopify_attributes }}
                >
                  {%- if block.settings.logo_img != blank -%}
                    {% render 'logo',
                      class: 'footer__logo',
                      image: block.settings.logo_img,
                      logo_width: block.settings.logo_width,
                      logo_text: shop.name
                    %}
                  {%- endif -%}

                  {%- if block.settings.title != blank -%}
                    <div class='footer__title {{ block.settings.heading_size }}'>{{ block.settings.title }}</div>
                  {%- endif -%}

                  {%- if mobile_block_style == 'static' and mobile_title != blank -%}
                    <p class='footer__title--mobile-static {{ block.settings.mobile_heading_size }}'>
                      {{ mobile_title }}
                    </p>
                  {%- endif -%}

                  {%- if block.settings.text != blank -%}
                    <div class='rte footer__text {{ block.settings.body_size }} body-color body-font-weight-from-global-settings'>
                      {{ block.settings.text }}
                    </div>
                  {%- endif -%}
                </div>

              {%- when 'subscribe' -%}
                {% if mobile_block_style != 'static' %}
                  <accordeon-component
                    class='accordeon-plus footer__accordion block-{{ block.id }} {% if enable_content_slide_in %}scroll-trigger animate--slide-in{% endif %}'
                    {% if enable_content_slide_in %}
                      style='--gsc-animation-order: {{forloop.index}};'
                    {% endif %}
                    data-aria-expanded='{{ mobile_block_style }}'
                    data-section-id='{{ section.id }}'
                    data-block-id='{{ block.id }}'
                    {{ block.shopify_attributes }}
                  >
                    <accordeon-button class='footer__accordion_btn' tabindex='0'>
                      <p class='{{ block.settings.mobile_heading_size }}'>{{ mobile_title }}</p>
                      {%- render 'icon', icon_name: 'plus', class: 'accordeon-plus__icon' -%}
                    </accordeon-button>

                    <div class='accordeon-plus__content-wrap' data-accordeon-content-wrap>
                      <div data-accordeon-content>
                        {%- if block.settings.text != blank -%}
                          <div class='rte footer__text {{ block.settings.body_size }} body-color body-font-weight-from-global-settings'>
                            {{ block.settings.text }}
                          </div>
                        {%- endif -%}

                        {%- form 'customer', id: 'ContactFooterMobile', class: 'newsletter footer__newsletter' -%}
                          <input
                            name='contact[tags]'
                            type='hidden'
                            value='newsletter'
                            id='ContactFooterMobile-ContactTagsInput-{{ form.id }}'
                          >

                          <div class='field'>
                            <label class='visually-hidden' for='ContactFooterMobile-ContactEmailInput-{{ form.id }}'>
                              {{- 'forms.newsletter.screen_reader.email_input_label' | t -}}
                            </label>
                            <input
                              type='email'
                              name='contact[email]'
                              class='input input--large input--{{ block.settings.input_style }}'
                              value='{{ form.email }}'
                              aria-required='true'
                              autocorrect='off'
                              autocapitalize='off'
                              autocomplete='email'
                              placeholder='{{ 'forms.newsletter.store_front.email_input_placeholder' | t }}'
                              required
                              id='ContactFooterMobile-ContactEmailInput-{{ form.id }}'
                            >
                            <button
                              class='btn btn--{{ block.settings.button_style }} btn--lg input-btn'
                              name='commit'
                              type='submit'
                              aria-label='{{ 'forms.newsletter.screen_reader.subscribe_button_label' | t }}'
                            >
                              {% render 'icon', icon_name: 'arrow', class: 'newsletter__arrow' %}
                            </button>
                          </div>

                          {% if block.settings.show_signup_checkbox %}
                            <label
                              class='checkbox checkbox--consent footer__checkbox body-font-weight-from-global-settings'
                              for='signup_checkbox_mobile_{{block.id}}'
                            >
                              <input
                                class='checkbox__input'
                                id='signup_checkbox_mobile_{{block.id}}'
                                type='checkbox'
                                required
                              >
                              <span class='checkbox__span checkbox__span--{{ block.settings.input_style }}'></span>
                              <span>{{ block.settings.signup_checkbox_text }}</span>
                            </label>
                          {% endif %}

                          {%- if form.errors -%}
                            {% assign error = form.errors.translated_fields.email
                              | capitalize
                              | append: ' '
                              | append: form.errors.messages.email
                            %}
                            <script>
                              window.notification = { text: '{{ error }}', variant: 'warning' }
                            </script>
                          {%- endif -%}

                          {%- if form.posted_successfully? -%}
                            {% assign success_message = 'forms.newsletter.store_front.success' | t %}
                            <script>
                              window.notification = { text: '{{ success_message }}', variant: 'success' }
                            </script>
                          {%- endif -%}
                        {%- endform -%}
                      </div>
                    </div>
                  </accordeon-component>
                {% endif %}

                <div
                  class='footer__block block-{{ block.id }} {% if mobile_block_style != 'static' %}footer__block--mobile-hidden{% else %}footer__block--mobile-static{% endif %} {% if enable_content_slide_in %}scroll-trigger animate--slide-in{% endif %}'
                  {% if enable_content_slide_in %}
                    style='--gsc-animation-order: {{forloop.index}};'
                  {% endif %}
                  {{ block.shopify_attributes }}
                >
                  {%- if block.settings.title != blank -%}
                    <div class='footer__title {{ block.settings.heading_size }}'>{{ block.settings.title }}</div>
                  {%- endif -%}

                  {%- if mobile_block_style == 'static' and mobile_title != blank -%}
                    <p class='footer__title--mobile-static {{ block.settings.mobile_heading_size }}'>
                      {{ mobile_title }}
                    </p>
                  {%- endif -%}

                  {%- if block.settings.text != blank -%}
                    <div class='rte footer__text {{ block.settings.body_size }} body-color body-font-weight-from-global-settings'>
                      {{ block.settings.text }}
                    </div>
                  {%- endif -%}

                  {%- form 'customer', id: 'ContactFooter', class: 'newsletter footer__newsletter' -%}
                    <input
                      name='contact[tags]'
                      type='hidden'
                      value='newsletter'
                      id='ContactFooter-ContactTagsInput-{{ form.id }}'
                    >

                    <div class='field'>
                      <label class='visually-hidden' for='ContactFooter-ContactEmailInput-{{ form.id }}'>
                        {{- 'forms.newsletter.screen_reader.email_input_label' | t -}}
                      </label>
                      <input
                        type='email'
                        name='contact[email]'
                        class='input input--large input--{{ block.settings.input_style }}'
                        value='{{ form.email }}'
                        aria-required='true'
                        autocorrect='off'
                        autocapitalize='off'
                        autocomplete='email'
                        placeholder='{{ 'forms.newsletter.store_front.email_input_placeholder' | t }}'
                        required
                        id='ContactFooter-ContactEmailInput-{{ form.id }}'
                      >
                      <button
                        class='btn btn--{{ block.settings.button_style }} btn--lg input-btn'
                        name='commit'
                        type='submit'
                        aria-label='{{ 'forms.newsletter.screen_reader.subscribe_button_label' | t }}'
                      >
                        {% render 'icon', icon_name: 'arrow', class: 'newsletter__arrow' %}
                      </button>
                    </div>

                    {% if block.settings.show_signup_checkbox %}
                      <label
                        class='checkbox checkbox--consent footer__checkbox body-font-weight-from-global-settings'
                        for='signup_checkbox_{{block.id}}'
                      >
                        <input
                          class='checkbox__input'
                          id='signup_checkbox_{{block.id}}'
                          type='checkbox'
                          required
                        >
                        <span class='checkbox__span checkbox__span--{{ block.settings.input_style }}'></span>
                        <span>{{ block.settings.signup_checkbox_text }}</span>
                      </label>
                    {% endif %}

                    {%- if form.errors -%}
                      {% assign error = form.errors.translated_fields.email
                        | capitalize
                        | append: ' '
                        | append: form.errors.messages.email
                      %}
                      <script>
                        window.notification = { text: '{{ error }}', variant: 'warning' }
                      </script>
                    {%- endif -%}

                    {%- if form.posted_successfully? -%}
                      {% assign success_message = 'forms.newsletter.store_front.success' | t %}
                      <script>
                        window.notification = { text: '{{ success_message }}', variant: 'success' }
                      </script>
                    {%- endif -%}
                  {%- endform -%}
                </div>

              {%- when 'social_media' -%}
                {% if mobile_block_style != 'static' %}
                  <accordeon-component
                    class='accordeon-plus footer__accordion block-{{ block.id }} {% if enable_content_slide_in %}scroll-trigger animate--slide-in{% endif %}'
                    {% if enable_content_slide_in %}
                      style='--gsc-animation-order: {{forloop.index}};'
                    {% endif %}
                    data-aria-expanded='{{ mobile_block_style }}'
                    data-section-id='{{ section.id }}'
                    data-block-id='{{ block.id }}'
                    {{ block.shopify_attributes }}
                  >
                    <accordeon-button class='footer__accordion_btn' tabindex='0'>
                      <p class='{{ block.settings.mobile_heading_size }}'>{{ mobile_title }}</p>
                      {%- render 'icon', icon_name: 'plus', class: 'accordeon-plus__icon' -%}
                    </accordeon-button>

                    <div class='accordeon-plus__content-wrap' data-accordeon-content-wrap>
                      <div data-accordeon-content>
                        <div class='rte footer__text {{ block.settings.body_size }} body-color body-font-weight-from-global-settings'>
                          {{ block.settings.text }}
                        </div>

                        {%- render 'social-list', class: 'footer__social-list' -%}
                      </div>
                    </div>
                  </accordeon-component>
                {% endif %}

                <div
                  class='footer__block block-{{ block.id }} {% if mobile_block_style != 'static' %}footer__block--mobile-hidden{% else %}footer__block--mobile-static{% endif %} {% if enable_content_slide_in %}scroll-trigger animate--slide-in{% endif %}'
                  {% if enable_content_slide_in %}
                    style='--gsc-animation-order: {{forloop.index}};'
                  {% endif %}
                  {{ block.shopify_attributes }}
                >
                  {%- if block.settings.title != blank -%}
                    <div class='footer__title {{ block.settings.heading_size }}'>{{ block.settings.title }}</div>
                  {%- endif -%}

                  {%- if mobile_block_style == 'static' and mobile_title != blank -%}
                    <p class='footer__title--mobile-static {{ block.settings.mobile_heading_size }}'>
                      {{ mobile_title }}
                    </p>
                  {%- endif -%}

                  {%- if block.settings.text != blank -%}
                    <div class='rte footer__text {{ block.settings.body_size }} body-color body-font-weight-from-global-settings'>
                      {{ block.settings.text }}
                    </div>
                  {%- endif -%}
                  {%- render 'social-list', class: 'footer__social-list' -%}
                </div>

              {%- when 'menu' -%}
                {% if mobile_block_style != 'static' %}
                  <accordeon-component
                    class='accordeon-plus footer__accordion block-{{ block.id }} {% if enable_content_slide_in %}scroll-trigger animate--slide-in{% endif %}'
                    {% if enable_content_slide_in %}
                      style='--gsc-animation-order: {{forloop.index}};'
                    {% endif %}
                    data-aria-expanded='{{ mobile_block_style }}'
