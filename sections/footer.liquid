{%- liquid
  assign options = section.settings

  assign color_scheme = settings.default_color_scheme
  if options.color_scheme_variant == 'own'
    assign color_scheme = options.color_scheme
  endif
  assign round_level = options.round_level
  assign enable_border = options.enable_border
  assign show_language_selector = options.show_language_selector
  assign show_currency_selector = options.show_currency_selector
  assign show_currency_flags = options.show_currency_flags
  assign show_payment_icons = options.show_payment_icons
  assign show_policy_links = options.show_policy_links
  assign copyright_text = options.copyright_text
  assign bottom_bar = options.bottom_bar
  assign container_size = options.container_size
  assign desktop_column_count = options.desktop_column_count
  assign enable_follow_on_shop = options.enable_follow_on_shop
  assign add_desktop_side_paddings = options.add_desktop_side_paddings
  assign add_mobile_side_paddings = options.add_mobile_side_paddings
  assign section_spacing_top = options.section_spacing_top
  assign section_spacing_bottom = options.section_spacing_bottom

  assign enable_content_slide_in = settings.enable_content_slide_in
-%}

{%- liquid
  assign show_background = section.settings.show_background
  assign color_container_background = false

  if show_background == false and settings.default_color_scheme.settings.background != color_scheme.settings.background
    assign color_container_background = true
  endif
-%}

{%- capture css -%}
  {% style %}
    .section-{{ section.id }} {
      --gsc-columns: 1;
      --gsc-space-between-cards: 4.8rem;
      --gsc-section-spacing-top: var(--gsc-padding-block-{{ section_spacing_top }});
      --gsc-section-spacing-bottom: var(--gsc-padding-block-{{ section_spacing_bottom }});
    }

    @media {% render 'media-queries', screen: 'md' %} {
      .section-{{ section.id }} {
        --gsc-columns: {{ desktop_column_count }};
      }
    }

    {% for block in section.blocks %}
        .block-{{ block.id }}{
            --gsc-logo-width: {{ block.settings.logo_width | divided_by: 10 }}rem;
            --gsc-image-width: {{ block.settings.image_width }}%;
            --gsc-img-ratio: {{ block.settings.image_ratio | times: 100 }}%;
        }
    {% endfor %}
  {% endstyle %}
{%- endcapture -%}

{%- render 'inline-css-minifier', css: css -%}

<div class='footer {% if round_level != 'default' %}round-level-{{round_level}}{% endif %} section-{{ section.id }} section color-{{ color_scheme }} spacing-block {% if add_mobile_side_paddings %}spacing-inline-mobile{% endif %} {% if add_desktop_side_paddings %}spacing-inline-desktop{% endif %} {% if color_container_background == false %}section-background{% endif %}'>
  <div class='footer__outer-container container container--{{ container_size }} {% if color_container_background %}container-background{% endif %}'>
    <div class='footer__container {% if enable_border %}footer__container--bordered{% endif %} container container--{{ container_size }}'>
      {%- if section.blocks.size > 0 -%}
        <div class='card-grid footer__card-grid'>
          {%- for block in section.blocks -%}
            {% liquid
              assign mobile_block_style = block.settings.mobile_block_style

              assign mobile_title = block.settings.mobile_title
              if mobile_title == blank
                assign mobile_title = block.settings.title
              endif
            %}

            {%- case block.type -%}
              {%- when 'image' -%}
                {%- assign media_type = block.settings.media_type -%}
                {%- assign image = block.settings.image -%}
                {%- assign video = block.settings.video -%}
                {%- assign link_url = block.settings.link.url -%}

                {% if mobile_block_style != 'static' %}
                  <accordeon-component
                    class='accordeon-plus footer__accordion block-{{ block.id }} {% if enable_content_slide_in %}scroll-trigger animate--slide-in{% endif %}'
                    {% if enable_content_slide_in %}
                      style='--gsc-animation-order: {{forloop.index}};'
                    {% endif %}
                    data-aria-expanded='{{ mobile_block_style }}'
                    data-section-id='{{ section.id }}'
                    data-block-id='{{ block.id }}'
                    {{ block.shopify_attributes }}
                  >
                    <accordeon-button class='footer__accordion_btn' tabindex='0'>
                      <p class='{{ block.settings.mobile_heading_size }}'>{{ mobile_title }}</p>
                      {%- render 'icon', icon_name: 'plus', class: 'accordeon-plus__icon' -%}
                    </accordeon-button>

                    <div class='accordeon-plus__content-wrap' data-accordeon-content-wrap>
                      <div class='footer__image-wrap' data-accordeon-content>
                        <a
                          class='shape shape--nature'
                          {% if link_url != blank %}
                            href='{{ link_url }}'
                          {% endif %}
                          aria-label=''
                        >
                          {%- if media_type == 'video' and video != blank -%}
                            {% render 'video-with-alt',
                              video: video,
                              class: 'image footer__image',
                              autoplay: true,
                              loop: true,
                              muted: true,
                              controls: false,
                              loading: 'lazy',
                              iterate_on_click: true
                            %}
                          {%- elsif media_type == 'image' and image != blank -%}
                            <img
                              {% render 'image-attributes',
                                image: image,
                                size: 'medium',
                                class: 'image footer__image'
                              %}
                            >
                          {%- else -%}
                            {{ 'image' | placeholder_svg_tag: 'image footer__image placeholder-image' }}
                          {%- endif -%}
                        </a>
                      </div>
                    </div>
                  </accordeon-component>
                {% endif %}

                <div
                  class='footer__block block-{{ block.id }} {% if mobile_block_style != 'static' %}footer__block--mobile-hidden{% else %}footer__block--mobile-static{% endif %} {% if enable_content_slide_in %}scroll-trigger animate--slide-in{% endif %}'
                  {% if enable_content_slide_in %}
                    style='--gsc-animation-order: {{forloop.index}};'
                  {% endif %}
                  {{ block.shopify_attributes }}
                >
                  {%- if mobile_block_style == 'static' and mobile_title != blank -%}
                    <p class='footer__title--mobile-static {{ block.settings.mobile_heading_size }}'>
                      {{ mobile_title }}
                    </p>
                  {%- endif -%}

                  <div class='footer__image-wrap'>
                    <a
                      class='shape shape--nature'
                      {% if link_url != blank %}
                        href='{{ link_url }}'
                      {% endif %}
                      aria-label=''
                    >
                      {%- if media_type == 'video' and video != blank -%}
                        {% render 'video-with-alt',
                          video: video,
                          class: 'image footer__image',
                          autoplay: true,
                          loop: true,
                          muted: true,
                          controls: false,
                          loading: 'lazy',
                          iterate_on_click: true
                        %}
                      {%- elsif media_type == 'image' and image != blank -%}
                        <img
                          {% render 'image-attributes', image: image, size: 'medium', class: 'image footer__image' %}
                        >
                      {%- else -%}
                        {{ 'image' | placeholder_svg_tag: 'image footer__image placeholder-image' }}
                      {%- endif -%}
                    </a>
                  </div>
                </div>

              {%- when 'text' -%}
                {% if mobile_block_style != 'static' %}
