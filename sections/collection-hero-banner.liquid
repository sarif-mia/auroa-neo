{%- liquid
  assign options = section.settings

  assign round_level = options.round_level
  assign add_desktop_side_paddings = options.add_desktop_side_paddings
  assign add_mobile_side_paddings = options.add_mobile_side_paddings
  assign section_spacing_top = options.section_spacing_top
  assign section_spacing_bottom = options.section_spacing_bottom
  assign show_collection_title = options.show_collection_title
  assign show_collection_description = options.show_collection_description
  assign show_breadcrumbs = options.show_breadcrumbs
  assign show_collection_image = options.show_collection_image
  assign desktop_ratio = options.desktop_ratio | times: 100
  assign mobile_ratio = options.mobile_ratio | times: 100
  assign desktop_content_position = options.desktop_content_position
  assign desktop_content_align = options.desktop_content_align
  assign content_max_width = options.content_max_width
  assign mobile_content_position = options.mobile_content_position
  assign mobile_content_align = options.mobile_content_align
  assign content_paddings_size = options.content_paddings_size
  assign container_size = options.container_size

  assign title = collection.title
  assign description = collection.description

  assign desktop_media = collection.image | default: collection.featured_image
  if options.desktop_media_type == 'image' and options.desktop_image != blank
    assign desktop_media = options.desktop_image
  endif
  if options.desktop_media_type == 'video' and options.desktop_video != blank
    assign desktop_media = options.desktop_video
  endif

  assign mobile_media = collection.image | default: collection.featured_image
  if options.mobile_media_type == 'image' and options.mobile_image != blank
    assign mobile_media = options.mobile_image
  endif
  if options.mobile_media_type == 'video' and options.mobile_video != blank
    assign mobile_media = options.mobile_video
  endif

  assign enable_content_slide_in = settings.enable_content_slide_in
  assign enable_image_zoom_out = settings.enable_image_zoom_out

  assign image_class = 'image collection-hero__image'
  if enable_image_zoom_out
    assign image_class = image_class | append: ' scroll-trigger animate--zoom-out'
  endif
-%}

{%- liquid
  assign color_scheme = settings.default_color_scheme
  if options.color_scheme_variant == 'own'
    assign color_scheme = options.color_scheme
  endif

  assign background_color = color_scheme.settings.background
  assign text_color = color_scheme.settings.text

  if options.color_scheme_variant == 'custom'
    assign background_color = section.settings.custom_background_color
    assign text_color = section.settings.custom_text_color
  endif

  assign desktop_enable_overlay = options.desktop_enable_overlay
  assign desktop_overlay_opacity = options.desktop_overlay_opacity | divided_by: 100.00
  assign mobile_enable_overlay = options.mobile_enable_overlay
  assign mobile_overlay_opacity = options.mobile_overlay_opacity | divided_by: 100.00
-%}

{%- liquid
  assign show_background = section.settings.show_background
  assign color_container_background = false

  if show_background == false and settings.default_color_scheme.settings.background != color_scheme.settings.background
    assign color_container_background = true
  endif

  if show_background == false and options.color_scheme_variant == 'custom' and settings.default_color_scheme.settings.background != section.settings.custom_background_color
    assign color_container_background = true
  endif
-%}

{% capture css %}
  {% style %}
    .section-{{section.id}} {
      --gsc-section-ratio: {{ mobile_ratio }}%;
      --gsc-content-align: {{mobile_content_align}};
      --gsc-section-spacing-top: var(--gsc-padding-block-{{ section_spacing_top }});
      --gsc-section-spacing-bottom: var(--gsc-padding-block-{{ section_spacing_bottom }});
      
      {% if options.color_scheme_variant == 'custom' %}        
        --gsc-background-color-100: {{ background_color }};
        --gsc-text-color-100: {{ text_color }};
        --gsc-text-color: {{ text_color.rgb | replace: ' ', ',' }};
      {% endif %}

      {% if mobile_enable_overlay %}
        --gsc-overlay-color-rgb: {{ background_color.rgb | replace: ' ', ',' }};
        --gsc-overlay-opacity: {{mobile_overlay_opacity}};
      {% else %}
        --gsc-overlay-color-rgb: 0,0,0;
        --gsc-overlay-opacity: 0;
      {% endif %} 

      {% if show_collection_image %}
        --gsc-content-paddings: var(--gsc-content-padding-{{ content_paddings_size }});
      {% endif %}
    }

    .section-{{ section.id }} .collection-hero__content-wrap {
      {{ mobile_content_position }}
      justify-content: {{mobile_content_align}};
    }

    @media {% render 'media-queries', screen: 'md' %} {
      .section-{{ section.id }} {
        --gsc-section-ratio: {{ desktop_ratio }}%;
        --gsc-content-max-width: {{ content_max_width }}px;
        --gsc-content-align: {{ desktop_content_align }};

        {% if desktop_enable_overlay %}
          --gsc-overlay-color-rgb: {{ background_color.rgb | replace: ' ', ',' }};
          --gsc-overlay-opacity: {{desktop_overlay_opacity}};
        {% else %}
          --gsc-overlay-color-rgb: 0,0,0;
          --gsc-overlay-opacity: 0;
        {% endif %}
      }

      .section-{{ section.id }} .collection-hero__content-wrap {
        {{ desktop_content_position }}
      }
    }
  {% endstyle %}
{% endcapture %}

{% render 'inline-css-minifier', css: css %}

<div class='section-{{ section.id }} {% if round_level != 'default' %}round-level-{{round_level}}{% endif %} color-{{ color_scheme }} section spacing-block {% if add_mobile_side_paddings %}spacing-inline-mobile{% endif %} {% if add_desktop_side_paddings %}spacing-inline-desktop{% endif %} {% if color_container_background == false %}section-background{% endif %}'>
  <div class='container container--{{ container_size }} {% if color_container_background %}container-background--no-paddings{% endif %}'>
    <div class='collection-hero'>
      {%- if show_collection_image -%}
        {% if mobile_enable_overlay or desktop_enable_overlay %}
          <div class='overlay'></div>
        {% endif %}

        {% if mobile_media != blank or desktop_media != blank %}
          {% if mobile_media == desktop_media %}
            {% if mobile_media.media_type == 'video' %}
              {% render 'video-with-alt',
                video: mobile_media,
                class: image_class,
                autoplay: true,
                loop: true,
                muted: true,
                controls: false,
                loading: 'lazy',
                iterate_on_click: true
              %}
            {% else %}
              <img
                {% render 'image-attributes', image: mobile_media, class: image_class, is_eager_loading: true %}
              >
            {% endif %}
          {% endif %}

          {% if mobile_media != desktop_media %}
            {% liquid
              assign mobile_image_class = image_class | append: ' desktop-hide'
              assign desktop_image_class = image_class | append: ' mobile-hide'
            %}

            {% if mobile_media.media_type == 'video' %}
              {% render 'video-with-alt',
                video: mobile_media,
                class: mobile_image_class,
                autoplay: true,
                loop: true,
                muted: true,
                controls: false,
                loading: 'lazy',
                iterate_on_click: true
              %}
            {% elsif mobile_media != blank %}
              <img
                {% render 'image-attributes', image: mobile_media, class: mobile_image_class, is_eager_loading: true %}
              >
            {% endif %}

            {% if desktop_media.media_type == 'video' %}
              {% render 'video-with-alt',
                video: desktop_media,
                class: desktop_image_class,
                autoplay: true,
                loop: true,
                muted: true,
                controls: false,
                loading: 'lazy',
                iterate_on_click: true
              %}
            {% elsif desktop_media != blank %}
              <img
                {% render 'image-attributes',
                  image: desktop_media,
                  class: desktop_image_class,
                  is_eager_loading: true
                %}
              >
            {% endif %}
          {% endif %}

        {% else %}
          <carousel-component
            class='carousel collection-hero__carousel'
            data-animation='fade'
            data-autoplay-interval='3'
            data-autoplay-mode='one_at_time'
            with-hover-pause
            data-draggable
            data-align='start'
            data-axis='x'
            data-contain-scroll='trimSnaps'
          >
            <div class='carousel__viewport collection-hero__carousel-viewport embla' data-carousel-viewport>
              <div class='carousel__container collection-hero__carousel-container' data-carousel-container>
                {%- for collection in collections -%}
                  {%- if collection.featured_image != blank -%}
                    {% liquid
                      assign is_eager_loading = false
                      if forloop.index0 == 0
                        assign is_eager_loading = true
                      endif
                    %}

                    <div class='carousel__slide'>
                      <img
                        {% render 'image-attributes',
                          image: collection.featured_image,
                          class: 'image',
                          is_eager_loading: is_eager_loading
                        %}
                      >
                    </div>
                  {%- endif -%}
                {%- endfor -%}
              </div>
            </div>
          </carousel-component>
        {% endif %}
      {%- endif -%}

      <div class='collection-hero__content-wrap'>
        <div class='collection-hero__content'>
          {%- if show_breadcrumbs -%}
            <div
              class='breadcrumbs collection-hero__breadcrumbs {% if enable_content_slide_in %}scroll-trigger animate--slide-in{% endif %}'
              {% if enable_content_slide_in %}
                style='--gsc-animation-order: 1;'
              {% endif %}
            >
              <a
                class='breadcrumbs__item'
                href='{{ routes.collections_url }}'
                aria-label='{{ 'collection_hero_banner.screen_reader.breadcrumb_collections_link' | t }}'
              >
                {{ 'collection_hero_banner.store_front.breadcrumb_collections_link' | t }}
              </a>
              <span class='breadcrumbs__divider'>/</span>
              <a
                class='breadcrumbs__item'
                href='{{ collection.url }}'
                aria-label='{{ collection.title | strip_html | escape }}'
              >
                {{- collection.title -}}
              </a>
            </div>
          {%- endif -%}
          {%- if show_collection_title and title != blank -%}
            <h1
              class='collection-hero__title {{ section.settings.heading_size }} {% if enable_content_slide_in %}scroll-trigger animate--slide-in{% endif %}'
              {% if enable_content_slide_in %}
                style='--gsc-animation-order: 2;'
              {% endif %}
            >
              {{ title }}
            </h1>
          {%- endif -%}
          {%- if show_collection_description and description != blank -%}
            <div
              class='body-color collection-hero__description body-font-weight-from-global-settings  {{ section.settings.body_size }} {% if enable_content_slide_in %}scroll-trigger animate--slide-in{% endif %}'
              {% if enable_content_slide_in %}
                style='--gsc-animation-order: 3;'
              {% endif %}
            >
              {{ description }}
            </div>
          {%- endif -%}
        </div>
      </div>
    </div>
  </div>
</div>

