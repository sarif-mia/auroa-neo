{%- liquid
  assign options = section.settings

  assign color_scheme = settings.default_color_scheme
  if options.color_scheme_variant == 'own'
    assign color_scheme = options.color_scheme
  endif
  assign round_level = options.round_level
  assign container_size = options.container_size
  assign add_desktop_side_paddings = options.add_desktop_side_paddings
  assign add_mobile_side_paddings = options.add_mobile_side_paddings
  assign section_spacing_top = options.section_spacing_top
  assign section_spacing_bottom = options.section_spacing_bottom

  assign subheading = options.subheading
  assign heading = options.heading
  assign body = options.body
  assign content_alignment = options.content_alignment
  assign content_layout = options.content_layout
  assign content_paddings_size = options.content_paddings_size
  assign heading_size = options.heading_size
  assign body_size = options.body_size
  assign icon_type = options.icon_type
  assign custom_icon_image = options.custom_icon_image
  assign icon = options.icon

  assign first_button_text = options.first_button_text
  assign first_button_link = options.first_button_link
  assign first_button_style = options.first_button_style

  assign second_button_text = options.second_button_text
  assign second_button_link = options.second_button_link
  assign second_button_style = options.second_button_style

  assign rotate_images = options.rotate_images
  assign img_ratio = options.img_ratio
  assign image_layout = options.image_layout
  assign image_count = section.blocks.size

  if section.blocks.size > 4
    assign image_count = 4
  endif

  assign with_only_links = true
  assign is_first_link = true
  assign is_second_link = true

  if first_button_text != blank and first_button_style != 'link'
    assign with_only_links = false
    assign is_first_link = false
  endif

  if second_button_text != blank and second_button_style != 'link'
    assign with_only_links = false
    assign is_second_link = false
  endif

  if body != blank
    assign with_only_links = false
  endif

  assign show_content = false

  if subheading != blank or heading != blank or body != blank or first_button_text != blank or second_button_text != blank or custom_icon_image != blank or icon != 'none'
    assign show_content = true
  endif

  assign enable_content_slide_in = settings.enable_content_slide_in
  assign enable_image_zoom_out = settings.enable_image_zoom_out

  assign image_class = 'images-with-text__image-list-item-media'
  if enable_image_zoom_out
    assign image_class = image_class | append: ' scroll-trigger animate--zoom-out'
  endif
-%}

{%- liquid
  assign show_background = section.settings.show_background
  assign color_container_background = false

  if show_background == false and settings.default_color_scheme.settings.background != color_scheme.settings.background
    assign color_container_background = true
  endif
-%}

{% capture css %}
    {% style %}
      .section-{{section.id}} {
        --gsc-img-ratio: {{ img_ratio | times: 100 }}%;
        --gsc-section-spacing-top: var(--gsc-padding-block-{{ section_spacing_top }});
        --gsc-section-spacing-bottom: var(--gsc-padding-block-{{ section_spacing_bottom }});
        --gsc-content-inline-paddings: var(--gsc-content-padding-{{ content_paddings_size }});
      }
    {% endstyle %}
{% endcapture %}

{% render 'inline-css-minifier', css: css %}

{% capture content %}
  <div class='images-with-text__content images-with-text__content--with-{{ content_alignment }}-alignment'>
    {%- if icon_type == 'custom' and custom_icon_image != blank -%}
    <img
      {% render 'image-attributes', image: custom_icon_image, size: 'small', class: 'images-with-text__icon' %}
    >
    {%- elsif icon_type == 'preset' -%}
      {% render 'icon-pack', icon: icon, class: 'images-with-text__icon' %}
    {%- endif -%}

    {%- if subheading != blank -%}
      <div class='caption body-color {% if enable_content_slide_in %}scroll-trigger animate--slide-in{% endif %}'
        {% if enable_content_slide_in %}
          style='--gsc-animation-order: 1;'
        {% endif %}
      >{{ subheading }}</div>
    {%- endif -%}

    {%- if heading != blank -%}
      <h2 class='{{ heading_size }} {% if enable_content_slide_in %}scroll-trigger animate--slide-in{% endif %}'
        {% if enable_content_slide_in %}
          style='--gsc-animation-order: 2;'
        {% endif %}
      >{{ heading }}</h2>
    {%- endif -%}

    {%- if body != blank -%}
    <div class='images-with-text__text rte {{ body_size }} {% if heading != blank %} body-color {% endif %} body-font-weight-from-global-settings {% if enable_content_slide_in %}scroll-trigger animate--slide-in{% endif %}'
      {% if enable_content_slide_in %}
        style='--gsc-animation-order: 3;'
      {% endif %}
    >
        {{ body }}
      </div>
    {%- endif -%}
    {%- if first_button_text != blank or second_button_text != blank -%}
      <div class='images-with-text__buttons {% if is_first_link %} images-with-text__buttons--with-first-button-link {% endif %} {% if is_second_link %} images-with-text__buttons--with-second-button-link {% endif %} {% if with_only_links %} images-with-text__buttons--with-only-links {% endif %} {% if enable_content_slide_in %}scroll-trigger animate--slide-in{% endif %}'
        {% if enable_content_slide_in %}
          style='--gsc-animation-order: 4;'
        {% endif %}
      >
        {%- if first_button_text != blank -%}
          {%- if first_button_style == 'link' -%}
            <a
              class='link'
              href='{% if first_button_link != blank %}{{ first_button_link }}{% else %}#{% endif %}'
              aria-label='{% if first_button_text != blank %}{{ first_button_text | strip_html | escape }}{% elsif first_button_link.title != blank %}{{ first_button_link.title | strip_html | escape }}{% else %}#{% endif %}'
            >
              <span class="link-parent-for-hover">
                <span class='link__text'>{{ first_button_text }}</span>
              </span>
              {%- render 'icon', icon_name: 'link-chevron', class: 'link__chevron' -%}
            </a>
          {%- else -%}
            <a
              class='btn btn--{{ first_button_style }} images-with-text__button'
              href='{% if first_button_link != blank %}{{ first_button_link }}{% else %}#{% endif %}'
              aria-label='{% if first_button_text != blank %}{{ first_button_text | strip_html | escape }}{% elsif first_button_link.title != blank %}{{ first_button_link.title | strip_html | escape }}{% else %}#{% endif %}'
            >
              {{- first_button_text -}}
            </a>
          {%- endif -%}
        {%- endif -%}
        {%- if second_button_text != blank -%}
          {% if second_button_style == 'link' -%}
            <a
              class='link'
              href='{% if second_button_link != blank %}{{ second_button_link }}{% else %}#{% endif %}'
              aria-label='{% if second_button_text != blank %}{{ second_button_text | strip_html | escape }}{% elsif second_button_link.title != blank %}{{ second_button_link.title | strip_html | escape }}{% else %}#{% endif %}'
            >
              <span class="link-parent-for-hover">
                <span class='link__text'>{{ second_button_text }}</span>
              </span>
              {%- render 'icon', icon_name: 'link-chevron', class: 'link__chevron' -%}
            </a>
          {%- else -%}
            <a
              class='btn btn--{{ second_button_style }} images-with-text__button'
              href='{% if second_button_link != blank %}{{ second_button_link }}{% else %}#{% endif %}'
              aria-label='{% if second_button_text != blank %}{{ second_button_text | strip_html | escape }}{% elsif second_button_link.title != blank %}{{ second_button_link.title | strip_html | escape }}{% else %}#{% endif %}'
            >
              {{- second_button_text -}}
            </a>
          {%- endif -%}
        {%- endif -%}
      </div>
    {%- endif -%}
  </div>
{% endcapture %}

{% capture images %}
  {% for block in section.blocks %}
    {%- liquid
      assign media_type = block.settings.media_type
      assign image = block.settings.image
      assign video = block.settings.video
    -%}

    {%- if media_type == 'video' and video != blank -%}
      <div class='images-with-text__image-list-item'>
        <div class='images-with-text__image-list-item-media-wrapper shape shape--nature'>
          {% render 'video-with-alt', video: video, class: 'images-with-text__image-list-item-media', autoplay: true, loop: true, muted: true, controls: false, loading: 'lazy', iterate_on_click: true %}
        </div>
      </div>
    {%- elsif media_type == 'image' and image != blank -%}
      <div class='images-with-text__image-list-item'>
        <div class='images-with-text__image-list-item-media-wrapper shape shape--nature'>
            <img
            {% if enable_image_zoom_out %}
              style="--gsc-animation-order: {{forloop.index}}; object-position: {{ image.presentation.focal_point }};"
            {% endif %}
            {% render 'image-attributes', image: image, class: image_class %}
          >
        </div>
      </div>
    {% else %}
      <div class='images-with-text__image-list-item'>
        <div class='images-with-text__image-list-item-media-wrapper shape shape--nature'>
          {{ 'image' | placeholder_svg_tag: 'placeholder-image images-with-text__image-list-item-media' }}
        </div>
      </div>
    {%- endif -%}
  {% endfor %}
{% endcapture %}

<div class='images-with-text {% if round_level != 'default' %}round-level-{{round_level}}{% endif %} color-{{ color_scheme }} section-{{ section.id }} spacing-block {% if add_mobile_side_paddings %}spacing-inline-mobile{% endif %} {% if add_desktop_side_paddings %}spacing-inline-desktop{% endif %} {% if color_container_background == false %}section-background{% endif %}'>
  <div class='images-with-text__container images-with-text__container--with-{{ content_layout }}-content container container--{{ container_size }} {% if color_container_background %}container-background{% endif %}'>
    {% if show_content == true %}
      <div class='images-with-text__content-wrapper'>{{ content }}</div>
    {% endif %}
    <div class='images-with-text__image-list-wrapper {% if rotate_images %} images-with-text__image-list-wrapper--with-{{image_layout}}-rotate{% endif %}'>
      <div class='images-with-text__image-list-body'>
        <div class='{% if image_layout == 'collage' %} shape shape--nature shape--overflow-visible{% endif %}'>
          <div
            class='images-with-text__image-list images-with-text__image-list--{{ image_layout }} images-with-text__image-list--{{ image_layout }}-with-{{ image_count }}-items {% if rotate_images %} images-with-text__image-list--{{ image_layout }}-with-{{ image_count }}-items-and-rotate{% endif %}'
          >
            {{ images }}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

