{% liquid
  assign view_type = section.settings.view_type
  assign img_ratio = section.settings.img_ratio
  assign round_level = section.settings.round_level

  assign first_collection = collections | first
  assign target_product = first_collection.products | first

  assign color_scheme = settings.default_color_scheme
  if section.settings.color_scheme_variant == 'own'
    assign color_scheme = section.settings.color_scheme
  endif
%}

{% if view_type == 'popup' and section.settings.show_dots != 'none' %}
  {% capture carousel_dots_class %}
    {% liquid
      assign show_dots = section.settings.show_dots
      assign dots_style = section.settings.dots_style
      assign dots_size = section.settings.dots_size

      assign dots_class = 'dynamic-dots'
      assign dots_class = dots_class | append: ' dynamic-dots--size-' | append: dots_size

      if show_dots == 'line'
        assign dots_class = dots_class | append: ' dynamic-dots--line-type'
      endif

      if dots_style contains 'white'
        assign dots_class = dots_class | append: ' dynamic-dots--dots-light'
      else
        assign dots_class = dots_class | append: ' dynamic-dots--dots-dark'
      endif

      if dots_style contains 'bg'
        if dots_style contains 'white'
          assign dots_class = dots_class | append: ' dynamic-dots--bg-light dynamic-dots--bg-blur'
        else
          assign dots_class = dots_class | append: ' dynamic-dots--bg-dark dynamic-dots--bg-blur'
        endif
      endif
    %}

    {{dots_class}}
  {% endcapture %}
{% endif %}

{% if img_ratio != 'default' %}
  <style>
    .quick-view.quick-view-{{ section.id }},
    .quick-view.quick-view-{{ section.id }} .shape-variable {
      {% case img_ratio %}
        {% when 'square' %}
          --gsc-quick-view-aspect-ratio: var(--gsc-square-image-ratio-numeric);
          --gsc-shape-variable-ratio: var(--gsc-square-image-ratio);
        {% when 'portrait' %}
          --gsc-quick-view-aspect-ratio: var(--gsc-portrait-image-ratio-numeric);
          --gsc-shape-variable-ratio: var(--gsc-portrait-image-ratio);
        {% when 'portrait-xl' %}
          --gsc-quick-view-aspect-ratio: var(--gsc-large-portrait-image-ratio-numeric);
          --gsc-shape-variable-ratio: var(--gsc-large-portrait-image-ratio);
        {% when 'landscape' %}
          --gsc-quick-view-aspect-ratio: var(--gsc-landscape-image-ratio-numeric);
          --gsc-shape-variable-ratio: var(--gsc-landscape-image-ratio);
      {% endcase %}
      
      --gsc-shape-variable-fill-mode: {{ section.settings.img_ratio_resize }};
      --gsc-shape-variable-background: var(--gsc-product-card-media-bg-color, transparent);
    }
  </style>
{% endif %}

<quick-view
  class='quick-view quick-view-{{ section.id }} quick-view--{{ view_type }} color-{{ color_scheme }} {% if round_level != 'default' %}round-level-{{round_level}}{% endif %} {% if img_ratio != 'default' %}custom-shape-container{% endif %}'
  id='Quick-view'
  data-with-overlay='only-desktop'
  data-overlay-important
  data-with-close-on-outside
  data-with-close-on-escape
  data-target-id='QuickViewProduct'
  data-open-direction='right'
  data-sidebar-section
  data-section-id='{{ section.id }}'
  data-default-product-url='{{ target_product.url }}'
  data-default-product-id='{{ target_product.id }}'
  data-view-type='{{ view_type }}'
  {% if carousel_dots_class %}
    data-dots-class='{{ carousel_dots_class }}'
  {% endif %}
>
  <template data-sidebar-template='Quick-view'>
    <div data-sidebar-body></div>
  </template>
</quick-view>

{% render 'save-section-data-in-global-scope', section: section %}

{% schema %}
