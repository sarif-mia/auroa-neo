          "label": "t:sections.general_section_settings.img_ratio_option_square_label"
        },
        {
          "value": "portrait",
          "label": "t:sections.general_section_settings.img_ratio_option_portrait_label"
        },
        {
          "value": "portrait-xl",
          "label": "t:sections.general_section_settings.img_ratio_option_portrait_xl_label"
        },
        {
          "value": "landscape",
          "label": "t:sections.general_section_settings.img_ratio_option_landscape_label"
        }
      ],
      "default": "default",
      "label": "t:sections.general_section_settings.ratio_label"
    },
    {
      "type": "select",
      "id": "img_ratio_resize",
      "options": [
        {
          "value": "cover",
          "label": "t:sections.general_section_settings.card_img_resize_fill_label"
        },
        {
          "value": "contain",
          "label": "t:sections.general_section_settings.card_img_resize_fit_label"
        }
      ],
      "default": "cover",
      "label": "t:sections.general_section_settings.card_img_resize_label",
      "visible_if": "{{ section.settings.img_ratio != 'default' }}"
    },
    {
      "type": "select",
      "id": "show_dots",
      "label": "Dots",
      "options": [
        {
          "value": "none",
          "label": "t:sections.general_section_settings.dots_style.show_dots.options.none"
        },
        {
          "value": "dot",
          "label": "t:sections.general_section_settings.dots_style.show_dots.options.basic"
        },
        {
          "value": "line",
          "label": "t:sections.general_section_settings.dots_style.show_dots.options.pills"
        }
      ],
      "default": "dot",
      "visible_if": "{{ section.settings.view_type == 'popup' }}"
    },
    {
      "type": "select",
      "id": "dots_style",
      "label": "Style",
      "options": [
        {
          "value": "dots_white",
          "label": "t:sections.general_section_settings.dots_style.dots_style.options.dots_white"
        },
        {
          "value": "dots_white_with_bg",
          "label": "t:sections.general_section_settings.dots_style.dots_style.options.dots_white_with_bg"
        },
        {
          "value": "dots_black",
          "label": "t:sections.general_section_settings.dots_style.dots_style.options.dots_black"
        },
        {
          "value": "dots_black_with_bg",
          "label": "t:sections.general_section_settings.dots_style.dots_style.options.dots_black_with_bg"
        }
      ],
      "default": "dots_white",
      "visible_if": "{{ section.settings.view_type == 'popup' and section.settings.show_dots != 'none' }}"
    },
    {
      "type": "select",
      "id": "dots_size",
      "label": "Size",
      "options": [
        {
          "value": "l",
          "label": "t:sections.general_section_settings.dots_style.dots_size.options.large"
        },
        {
          "value": "m",
          "label": "t:sections.general_section_settings.dots_style.dots_size.options.medium"
        },
        {
          "value": "s",
          "label": "t:sections.general_section_settings.dots_style.dots_size.options.small"
        }
      ],
      "default": "l",
      "visible_if": "{{  section.settings.view_type == 'popup' and section.settings.show_dots != 'none' }}"
    },
    {
      "type": "header",
      "content": "t:sections.general_section_settings.appearance.header_title"
    },
    {
      "type": "select",
      "id": "round_level",
      "options": [
        {
          "value": "default",
          "label": "t:settings_schema.appearance.round_level.options.default"
