{% liquid
  assign options = section.settings

  assign section_spacing_top = options.section_spacing_top
  assign section_spacing_bottom = options.section_spacing_bottom
  assign round_level = options.round_level

  assign add_desktop_side_paddings = options.add_desktop_side_paddings
  assign add_mobile_side_paddings = options.add_mobile_side_paddings

  assign disable_lazy_loading = options.disable_lazy_loading

  assign enable_image_zoom_out = settings.enable_image_zoom_out
  assign enable_content_slide_in = settings.enable_content_slide_in

  assign image_class = 'video-banner__cover-image'
  if enable_image_zoom_out
    assign image_class = image_class | append: ' scroll-trigger animate--zoom-out'
  endif

  assign desktop_video = options.desktop_shopify_video
  if options.desktop_media_type == 'external'
    assign desktop_video = options.desktop_youtube_or_vimeo_video
  endif

  assign desktop_video_id = desktop_video.id
  assign desktop_cover_image = options.desktop_cover_image | default: desktop_video.preview_image

  assign mobile_video = options.mobile_shopify_video
  if options.mobile_media_type == 'external'
    assign mobile_video = options.mobile_youtube_or_vimeo_video
  endif

  if mobile_video == blank
    assign mobile_video = desktop_video
  endif
  if desktop_video == blank
    assign desktop_video = mobile_video
  endif

  assign mobile_video_id = mobile_video.id
  assign mobile_cover_image = options.mobile_cover_image | default: mobile_video.preview_image
  if options.mobile_cover_image == blank and desktop_cover_image != blank
    assign mobile_cover_image = desktop_cover_image
  endif
  if options.desktop_cover_image == blank and mobile_cover_image != blank
    assign desktop_cover_image = mobile_cover_image
  endif

  assign desktop_ratio = 0.563
  assign mobile_ratio = 0.563

  if options.desktop_use_custom_image_ratio
    assign desktop_ratio = options.desktop_custom_ratio
  endif

  if options.mobile_use_custom_image_ratio
    assign mobile_ratio = options.mobile_custom_ratio
  endif

  assign desktop_video_class = 'video-banner__media'
  assign mobile_video_class = 'video-banner__media'
  if desktop_video != mobile_video
    assign desktop_video_class = desktop_video_class | append: ' mobile-hide'
    assign mobile_video_class = mobile_video_class | append: ' desktop-hide'
  endif
%}

{%- liquid
  assign color_scheme = settings.default_color_scheme
  if options.color_scheme_variant == 'own'
    assign color_scheme = options.color_scheme
  endif

  assign background_color = color_scheme.settings.background
  assign text_color = color_scheme.settings.text

  if options.color_scheme_variant == 'custom'
    assign background_color = section.settings.custom_background_color
    assign text_color = section.settings.custom_text_color
  endif

  assign desktop_enable_overlay = options.desktop_enable_overlay
  assign desktop_overlay_opacity = options.desktop_overlay_opacity | divided_by: 100.00
  assign mobile_enable_overlay = options.mobile_enable_overlay
  assign mobile_overlay_opacity = options.mobile_overlay_opacity | divided_by: 100.00
-%}

{%- liquid
  assign show_background = section.settings.show_background
  assign color_container_background = false

  if show_background == false and settings.default_color_scheme.settings.background != color_scheme.settings.background
    assign color_container_background = true
  endif

  if show_background == false and options.color_scheme_variant == 'custom' and settings.default_color_scheme.settings.background != section.settings.custom_background_color
    assign color_container_background = true
  endif
-%}

{% capture css %}
  {% style %}
    .section-{{section.id}}{
      --gsc-section-spacing-top: var(--gsc-padding-block-{{ section_spacing_top }});
      --gsc-section-spacing-bottom: var(--gsc-padding-block-{{ section_spacing_bottom }});
      --gsc-section-ratio: {{ mobile_ratio | times: 100 }}%;
      --gsc-video-banner-width: 100%;
      --gsc-video-banner-content-alignment: {{ options.mobile_content_align }};  
      --gsc-content-paddings: var(--gsc-content-padding-{{ options.content_paddings_size }});
      
      {% if options.color_scheme_variant == 'custom' %}        
        --gsc-background-color-100: {{ background_color }};
        --gsc-text-color-100: {{ text_color }};
        --gsc-text-color: {{ text_color.rgb | replace: ' ', ',' }};
      {% endif %}

      {% if mobile_enable_overlay %}
        --gsc-overlay-color-rgb: {{ background_color.rgb | replace: ' ', ',' }};
        --gsc-overlay-opacity: {{mobile_overlay_opacity}};
      {% else %}
        --gsc-overlay-color-rgb: 0,0,0;
        --gsc-overlay-opacity: 0;
      {% endif %} 

    }

    @media {% render 'media-queries', screen: 'md' %} {
        .section-{{ section.id }}{
          --gsc-section-ratio: {{ desktop_ratio | times: 100 }}%;
          --gsc-video-banner-width: {{ options.content_width | divided_by: 10.0 }}rem;
          --gsc-video-banner-content-alignment: {{ options.desktop_content_align }};

          {% if desktop_enable_overlay %}
            --gsc-overlay-color-rgb: {{ background_color.rgb | replace: ' ', ',' }};
            --gsc-overlay-opacity: {{desktop_overlay_opacity}};
          {% else %}
            --gsc-overlay-color-rgb: 0,0,0;
            --gsc-overlay-opacity: 0;
          {% endif %}
        }
    }
  {% endstyle %}
{% endcapture %}

{% render 'inline-css-minifier', css: css %}

{% if options.desktop_media_type == 'file' %}
  {% capture desktop_shopify_video_html %}
    {% render 'video-with-alt',
      class: desktop_video_class,
      video: desktop_video,
      autoplay: options.enable_autoplay,
      loop: options.enable_looping,
      controls: options.enable_controls,
      muted: options.mute_video,
      is_eager_loading: true
    %}
  {% endcapture %}
{% endif %}

{% if desktop_video != mobile_video and options.mobile_media_type == 'file' %}
  {% capture mobile_shopify_video_html %}
    {% render 'video-with-alt',
      class: mobile_video_class,
      video: mobile_video,
      autoplay: options.enable_autoplay,
      loop: options.enable_looping,
      controls: options.enable_controls,
      muted: options.mute_video,
      is_eager_loading: true
    %}
  {% endcapture %}
{% endif %}

{% if options.desktop_media_type == 'external' %}
  {% capture desktop_external_video_html %}
    {%- liquid
      assign prepared_video_url = desktop_video_id | append: '?'

      if options.desktop_youtube_or_vimeo_video.type == 'youtube'
        assign prepared_video_url = prepared_video_url | append: 'enablejsapi=1'
      endif

      assign prepared_video_url = prepared_video_url | append: '&autoplay=1'

      if options.enable_looping
        assign prepared_video_url = prepared_video_url | append: '&loop=1&playlist=' | append: desktop_video_id
      endif

      if options.mute_video or options.enable_autoplay
        assign prepared_video_url = prepared_video_url | append: '&mute=1&muted=1'
      endif

      unless options.enable_controls
        assign prepared_video_url = prepared_video_url | append: '&controls=0'
      endunless

      assign src = 'https://www.youtube.com/embed/' | append: prepared_video_url
      if options.desktop_youtube_or_vimeo_video.type != 'youtube'
        assign src = 'https://player.vimeo.com/video/' | append: prepared_video_url
      endif
    -%}

    <iframe
      src="{{ src }}"
      class="{{ desktop_video_class }}"
      allow='autoplay'
      allowfullscreen
      frameborder='0'
      title='{{ options.video_alt_text | escape }}'
    ></iframe>
  {% endcapture %}
{% endif %}

{% if desktop_video != mobile_video and options.mobile_media_type == 'external' %}
  {% capture mobile_external_video_html %}
    {%- liquid
      assign prepared_video_url = mobile_video_id | append: '?'

      if options.mobile_youtube_or_vimeo_video.type == 'youtube'
        assign prepared_video_url = prepared_video_url | append: 'enablejsapi=1'
      endif

      assign prepared_video_url = prepared_video_url | append: '&autoplay=1'

      if options.enable_looping
        assign prepared_video_url = prepared_video_url | append: '&loop=1&playlist=' | append: mobile_video_id
      endif

      if options.mute_video or options.enable_autoplay
        assign prepared_video_url = prepared_video_url | append: '&mute=1&muted=1'
      endif

      unless options.enable_controls
        assign prepared_video_url = prepared_video_url | append: '&controls=0'
      endunless

      assign src = 'https://www.youtube.com/embed/{{ prepared_video_url }}'      
      if options.mobile_youtube_or_vimeo_video.type != 'youtube'
        assign src = 'https://player.vimeo.com/video/{{ prepared_video_url }}'   
      endif
    -%}

    <iframe
      src="{{ src }}"
      class="{{ mobile_video_class }}"
      allow='autoplay'
      allowfullscreen
      frameborder='0'
      title='{{ options.video_alt_text | escape }}'
    ></iframe>
  {% endcapture %}
{% endif %}

{% capture result_desktop_video_html %}
  {% if options.enable_autoplay %}
    {% if options.desktop_media_type == 'file' %}
      {{ desktop_shopify_video_html }}
    {% elsif options.desktop_media_type == 'external' %}
      {{ desktop_external_video_html }}
    {% endif %}

  {% else %}
    <template data-video-banner-media-template-desktop>
      {% if options.desktop_media_type == 'file' %}
        {{ desktop_shopify_video_html }}
      {% elsif options.desktop_media_type == 'external' %}
        {{ desktop_external_video_html }}
      {% endif %}
    </template>
  {% endif %}
{% endcapture %}

{% if desktop_video != mobile_video %}
  {% capture result_mobile_video_html %}
    {% if options.enable_autoplay %}
      {% if options.mobile_media_type == 'file' %}
        {{ mobile_shopify_video_html }}
      {% elsif options.mobile_media_type == 'external' %}
        {{ mobile_external_video_html }}
      {% endif %}

    {% else %}
      <template data-video-banner-media-template-mobile>
        {% if options.mobile_media_type == 'file' %}
          {{ mobile_shopify_video_html }}
        {% elsif options.mobile_media_type == 'external' %}
          {{ mobile_external_video_html }}
        {% endif %}
      </template>
    {% endif %}
  {% endcapture %}
{% endif %}

<video-banner
  class='video-banner {% if round_level != 'default' %}round-level-{{round_level}}{% endif %} section-{{ section.id }} color-{{ color_scheme }} spacing-block {% if add_mobile_side_paddings %}spacing-inline-mobile{% endif %} {% if add_desktop_side_paddings %}spacing-inline-desktop{% endif %} {% if color_container_background == false %}section-background{% endif %}'
  {% if options.enable_autoplay %}
    data-enable-autoplay
  {% endif %}
  {% if options.enable_controls %}
    data-enable-controls
  {% endif %}
  {% if desktop_video != mobile_video and desktop_video != blank and mobile_video != blank %}
    data-has-mobile-video
  {% endif %}
>
  <div class='container container--{{ options.container_size }} {% if color_container_background %}container-background{% endif %}'>
    <div class='video-banner__inner-container' data-video-banner-container>
      {% if desktop_video != blank or mobile_video != blank %}
        {% if desktop_video == mobile_video %}
          {{ result_desktop_video_html }}
        {% else %}
          {{ result_desktop_video_html }}
          {{ result_mobile_video_html }}
        {% endif %}
      {% endif %}

      {% unless options.enable_autoplay %}
        <div
          class='video-banner__poster'
          data-video-banner-poster
        >
          <div class='video-banner__content-wrapper video-banner__content-wrapper--with-mobile-{{ options.mobile_content_position }}-position video-banner__content-wrapper--with-desktop-{{ options.desktop_content_position }}-position'>
            <div class='video-banner__content video-banner__content--with-mobile-{{ options.mobile_content_align }}-alignment video-banner__content--with-desktop-{{ options.desktop_content_align }}-alignment'>
              <button
                class='video-banner__play-button {% if enable_content_slide_in %}scroll-trigger animate--slide-in{% endif %}'
                {% if enable_content_slide_in %}
                  style='--gsc-animation-order: 1;'
                {% endif %}
                type='button'
                aria-label='{{- 'icons.screen_reader.play-without-round' | t -}}'
              >
                {% render 'icon', icon_name: 'play-without-round', class: 'video-banner__play-button-icon' %}
              </button>
              {% if options.subheading != blank or options.heading != blank or options.text != blank %}
                <div class='video-banner__info'>
                  {% if options.subheading != blank %}
                    <div
                      class='video-banner__subheading body-color {% if enable_content_slide_in %}scroll-trigger animate--slide-in{% endif %}'
                      {% if enable_content_slide_in %}
                        style='--gsc-animation-order: 1;'
                      {% endif %}
                    >
                      {{ options.subheading }}
                    </div>
                  {% endif %}
                  {% if options.heading != blank %}
                    <h2
                      class='video-banner__heading {{ options.heading_size }} {% if enable_content_slide_in %}scroll-trigger animate--slide-in{% endif %}'
                      {% if enable_content_slide_in %}
                        style='--gsc-animation-order: 2;'
                      {% endif %}
                    >
                      {{ options.heading }}
                    </h2>
                  {% endif %}
                  {% if options.text != blank %}
                    <div
                      class='video-banner__text rte body-color {{ options.body_size }} body-font-weight-from-global-settings {% if enable_content_slide_in %}scroll-trigger animate--slide-in{% endif %}'
                      {% if enable_content_slide_in %}
                        style='--gsc-animation-order: 3;'
                      {% endif %}
                    >
                      {{ options.text }}
                    </div>
                  {% endif %}
                </div>
              {% endif %}
            </div>
          </div>

          {% if desktop_cover_image != blank or mobile_cover_image != blank %}
            {% if desktop_cover_image == mobile_cover_image %}
              <img
                {% render 'image-attributes',
                  image: desktop_cover_image,
                  class: image_class,
                  is_eager_loading: disable_lazy_loading
                %}
              >
            {% else %}
              {% if mobile_cover_image != blank %}
                {% assign mobile_image_class = image_class | append: ' desktop-hide' %}
                <img
                  {% render 'image-attributes',
                    image: mobile_cover_image,
                    class: mobile_image_class,
                    is_eager_loading: disable_lazy_loading
                  %}
                >
              {% endif %}

              {% if desktop_cover_image != blank %}
                {% assign desktop_image_class = image_class | append: ' mobile-hide' %}
                <img
                  {% render 'image-attributes',
                    image: desktop_cover_image,
                    class: desktop_image_class,
                    is_eager_loading: disable_lazy_loading
                  %}
                >
              {% endif %}
            {% endif %}
          {% else %}
            {{
              'lifestyle-2'
              | placeholder_svg_tag: 'placeholder-image placeholder-image--with-content video-banner__media'
            }}
          {% endif %}

          {% if desktop_overlay_opacity or mobile_enable_overlay %}
            <div class='video-banner__poster-overlay'></div>
          {% endif %}
        </div>
      {% endunless %}
    </div>
  </div>
</video-banner>

