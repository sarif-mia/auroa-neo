                  {% if enable_content_slide_in %}
                    style='--gsc-animation-order: {{forloop.index}};'
                  {% endif %}
                  {{ block.shopify_attributes }}
                >
                  {%- form 'customer', id: 'DesktopPasswordSignUp' -%}
                    <input
                      name='contact[tags]'
                      type='hidden'
                      value='newsletter'
                      id='DesktopPasswordSignUp-ContactTagsInput-{{ form.id }}'
                    >

                    <div class='field signup-newsletter-form__field'>
                      <label class='visually-hidden' for='DesktopPasswordSignUp-EmailInput-{{ form.id }}'>
                        {{- 'general.password_page.screen_reader.label_for_email_input' | t -}}
                      </label>

                      <input
                        id='DesktopPasswordSignUp-EmailInput-{{ form.id }}'
                        type='email'
                        name='contact[email]'
                        class='input input--{{ block.settings.input_style }} input--large signup-newsletter-form__input'
                        value='{{ form.email }}'
                        aria-required='true'
                        autocorrect='off'
                        autocapitalize='off'
                        autocomplete='email'
                        placeholder='{{ 'general.password_page.store_front.placeholder_for_email_input' | t }}'
                        required
                      >

                      <button
                        class='btn btn--{{ btn_style }} btn--lg signup-newsletter-form__input-btn'
                        type='submit'
                        name='commit'
                        aria-label='{{ 'general.password_page.screen_reader.subscribe_button_label' | t }}'
                      >
                        {% render 'icon', icon_name: 'arrow', class: 'signup-newsletter-form__input-btn-arrow-icon' %}
                      </button>
                    </div>

                    {% if block.settings.show_signup_checkbox %}
                      <label
                        class='checkbox checkbox--consent signup-newsletter-form__checkbox body-font-weight-from-global-settings'
                        for='signup_checkbox_desktop_{{block.id}}'
                      >
                        <input
                          class='checkbox__input'
                          id='signup_checkbox_desktop_{{block.id}}'
                          type='checkbox'
                          required
                        >
                        <span class='checkbox__span checkbox__span--{{ block.settings.input_style }}'></span>
                        <span>{{ block.settings.signup_checkbox_text }}</span>
                      </label>
                    {% endif %}

                    {%- if form.errors -%}
                      {%- assign error = form.errors.translated_fields.email
                        | capitalize
                        | append: ' '
                        | append: form.errors.messages.email
                      -%}

                      <script>
                        window.notification = { text: '{{ error }}', variant: 'warning' }
                      </script>
                    {%- endif -%}

                    {%- if form.posted_successfully? -%}
                      {%- assign success_message = 'forms.newsletter.store_front.success' | t -%}
                      <script>
                        window.notification = { text: '{{ success_message }}', variant: 'success' }
                      </script>
                    {%- endif -%}
                  {%- endform -%}
                </div>
              {% when 'countdown' %}
                <div
                  class='block-{{block.id}} signup__timer'
                  {{ block.shopify_attributes }}
                >
                  {% render 'timer', block: block, timerId: 'DesktopTimer', ensure_width: true %}
                </div>
            {%- endcase -%}
