{%- liquid
  assign options = section.settings

  assign color_scheme = settings.default_color_scheme
  if options.color_scheme_variant == 'own'
    assign color_scheme = options.color_scheme
  endif
  assign round_level = options.round_level
  assign container_size = options.container_size
  assign section_spacing_top = options.section_spacing_top
  assign section_spacing_bottom = options.section_spacing_bottom
  assign add_desktop_side_paddings = options.add_desktop_side_paddings
  assign add_mobile_side_paddings = options.add_mobile_side_paddings

  assign heading = options.heading
  assign heading_size = options.heading_size
  assign heading_alignment = options.heading_alignment

  assign image_position = options.image_position
  assign image_width = options.image_width
  assign card_background = options.card_background
  assign gap = options.gap
  assign content_alignment = options.content_alignment
  assign content_paddings_size = options.content_paddings_size
  assign desktop_img_ratio = options.desktop_img_ratio
  assign mobile_img_ratio = options.mobile_img_ratio
  assign rotate_images = options.rotate_images
  assign show_dots = options.show_dots

  assign blocks_size = section.blocks.size

  assign autoplay_mode = options.autoplay_mode
  assign autoplay_interval = options.autoplay_interval

  assign enable_content_slide_in = settings.enable_content_slide_in
  assign enable_image_zoom_out = settings.enable_image_zoom_out

  assign slider_image_class = 'image-slider__image'
  assign target_image_class = 'shape__target-image'
  if enable_image_zoom_out
    assign slider_image_class = slider_image_class | append: ' scroll-trigger animate--zoom-out'
    assign target_image_class = target_image_class | append: ' scroll-trigger animate--zoom-out'
  endif
-%}

{%- liquid
  assign show_background = section.settings.show_background
  assign color_container_background = false

  if show_background == false and settings.default_color_scheme.settings.background != color_scheme.settings.background
    assign color_container_background = true
  endif
-%}

{% capture css %}
    {% style %}
      .section-{{section.id}} {
        --gsc-img-ratio: {{ mobile_img_ratio | times: 100 }}%;
        --gsc-img-ratio-with-rotate: {{ mobile_img_ratio }};
        --gsc-section-spacing-top: var(--gsc-padding-block-{{ section_spacing_top }});
        --gsc-section-spacing-bottom: var(--gsc-padding-block-{{ section_spacing_bottom }});
        --gsc-content-inline-paddings: var(--gsc-content-padding-{{ content_paddings_size }});
        --gsc-back-z-index: -{{ blocks_size |  plus: 1 }};        

        --gsc-images-quantity: {{ blocks_size }};        
        --gsc-image-slider-gap:  var(--gsc-gap-{{ gap }}, 2rem);    
        --gsc-image-slider-heading-alignment: {{ heading_alignment }};    
      }

      @media {% render 'media-queries', screen: 'md' %} { 
        .section-{{section.id}} {
          --gsc-img-ratio: {{ desktop_img_ratio | times: 100 }}%;
          --gsc-img-ratio-with-rotate: {{ desktop_img_ratio }};
          --gsc-image-slider-gap:  var(--gsc-gap-{{ gap }}, 6.4rem);  
          --gsc-dots-width: {{ 100 | minus: image_width }}%;  
        }
      }
  
    {% endstyle %}
{% endcapture %}

{% render 'inline-css-minifier', css: css %}

{% if blocks_size > 1 and show_dots != 'none' %}
  {% capture dots %}
    {% liquid
      assign dots_style = section.settings.dots_style

      assign dots_color = 'dark'
      if dots_style contains 'white'
        assign dots_color = 'light'
      endif

      assign bg_color = 'none'
      assign bg_blur = false
      if dots_style contains 'bg'
        assign bg_color = dots_color
        assign bg_blur = true
      endif

      assign dots_count = section.blocks.size
      if section.blocks.size > 5
        assign dots_count = 5
      endif
    %}

    {% render 'dynamic-dots',
      class: 'slideshow__dots-carousel'
      dots_count: dots_count,
      visible_dots_count: 5,
      active_dot_type: show_dots,
      dots_size: 'm',
      dots_color: dots_color,
      bg_color: bg_color,
      bg_blur: bg_blur
    %}
  {% endcapture %}
{% endif %}

{% capture carousel_without_image_rotate %}
  <carousel-component
      class='card-carousel image-slider-slideshow {% if image_position == 'right' %}image-slider-slideshow--with-image-on-right-side{% endif %}'
      data-section-id='{{ section.id }}'
      data-align='start'
      data-axis='x'
      data-contain-scroll='trimSnaps'
      {% if autoplay_mode != 'disabled' %}
        with-hover-pause
        data-autoplay-mode='{{autoplay_mode}}'
        data-autoplay-interval='{{autoplay_interval}}'
      {% endif %}
    >
      <div class='card-carousel__viewport embla image-slider__image-carousel' data-carousel-viewport>
        <div class='carousel__container' data-carousel-container>
          {%- for block in section.blocks -%}
            {% liquid
              assign media_type = block.settings.media_type
              assign image = block.settings.image
              assign video = block.settings.video
              assign button_text = block.settings.button_text
              assign button_link = block.settings.button_link
            %}

            <div class='carousel__slide image-slider__slide' block-id="{{ block.id }}" {{ block.shopify_attributes }}>
              <div class='image-slider__image-wrapper shape shape--nature' data-image-slider-image>
                {%- if media_type == 'video' and video != blank -%}
                  {% render 'video-with-alt',
                    video: video,
                    class: 'shape__target-image',
                    autoplay: true,
                    loop: true,
                    muted: true,
                    controls: false,
                    loading: 'lazy', 
                    iterate_on_click: true
                  %}
                {%- elsif media_type == 'image' and image != blank -%}
                  <img
                    {% render 'image-attributes', image: image, size: 'medium', class: target_image_class, is_eager_loading: true %}
                  >
                {% else %}
                  {{ 'image' | placeholder_svg_tag: 'placeholder-image shape__target-image' }}
                {%- endif -%}

                {% if button_text == blank and button_link != blank %}
                  <a
                    class='image-slider__mock-link'
                    href='{{ button_link }}'
                    aria-label='{{ button_text }}'
                  >
                  </a>
                {% endif %}
              </div>
            </div>
          {%- endfor -%}
        </div>

        {{ dots }}

      </div>

      <carousel-dots
        class='carousel image-slider__dots-carousel {% if card_background != 'none' %}image-slider__dots-carousel--bg-{{ card_background }}{% endif %}'
        data-contain-scroll='keepSnaps'
        data-align='center'
        data-in-view-threshhold='1'
        data-axis='x'
      >
        <div
          class='carousel__viewport embla'
          data-carousel-viewport
        >
          <div
            class='carousel__container image-slider-slideshow__carousel-container'
            data-carousel-container
          >
            {%- for block in section.blocks -%}
              {% liquid
                assign block_subheading = block.settings.subheading
                assign block_heading = block.settings.heading
                assign block_body = block.settings.body
                assign block_heading_size = block.settings.heading_size
                assign block_body_size = block.settings.body_size

                assign block_button_text = block.settings.button_text
                assign block_button_link = block.settings.button_link
                assign block_button_style = block.settings.button_style
              %}

              <div
                class='carousel__slide image-slider__content-wrapper'
                tabindex='0'
                data-dot-index='{{ forloop.index0 }}'
              >
                <div class='image-slider__content image-slider__content--with-{{ content_alignment }}-alignment'>
                  {%- if block_subheading != blank -%}
                    <div class='caption body-color {% if enable_content_slide_in %}scroll-trigger animate--slide-in{% endif %}'
                      {% if enable_content_slide_in %}
                        style='--gsc-animation-order: 1;'
                      {% endif %}
                    >{{ block_subheading }}</div>
                  {%- endif -%}

                  {%- if block_heading != blank -%}
                    <h2 class='{{ block_heading_size }} image-slider__title {% if enable_content_slide_in %}scroll-trigger animate--slide-in{% endif %}'
                      {% if enable_content_slide_in %}
                        style='--gsc-animation-order: 2;'
                      {% endif %}
                    >{{ block_heading }}</h2>
                  {%- endif -%}

                  {%- if block_body != blank -%}
                    <div class='image-slider__text rte {{ block_body_size }} {% if block_heading != blank %} body-color {% endif %} body-font-weight-from-global-settings {% if enable_content_slide_in %}scroll-trigger animate--slide-in{% endif %}'
                      {% if enable_content_slide_in %}
                        style='--gsc-animation-order: 3;'
                      {% endif %}
                    >
                      {{ block_body }}
                    </div>
                  {%- endif -%}

                  {%- if block_button_text != blank -%}
                    {%- if block_button_style == 'link' -%}
                      <a
                        class='link image-slider__btn {% if enable_content_slide_in %}scroll-trigger animate--slide-in{% endif %}'
                        {% if enable_content_slide_in %}
                          style='--gsc-animation-order: 4;'
                        {% endif %}
                        href='{{ block_button_link }}'
                        aria-label='{{ block_button_text }}'
                      >
                        <span class="link-parent-for-hover">
                          <span class='link__text'>{{ block_button_text }}</span>
                        </span>
                        {%- render 'icon', icon_name: 'link-chevron', class: 'link__chevron' -%}
                      </a>
                    {%- else -%}
                      <a
                        class='btn btn--{{ block_button_style }} image-slider__btn {% if enable_content_slide_in %}scroll-trigger animate--slide-in{% endif %}'
                        {% if enable_content_slide_in %}
                          style='--gsc-animation-order: 5;'
                        {% endif %}
                        href='{{ block_button_link }}'
                        aria-label='{{- block_button_text -}}'
                      >
                        {{- block_button_text -}}
                      </a>
                    {%- endif -%}
                  {%- endif -%}

                  {% if block_button_text == blank and block_button_link != blank %}
                    <a
                      class='image-slider__mock-link'
                      href='{{ block_button_link }}'
                      aria-label='{{ block_button_text }}'
                    >
                    </a>
                  {% endif %}
                </div>
              </div>
            {%- endfor -%}
          </div>
        </div>
      </carousel-dots>
    </carousel-component>
{% endcapture %}

