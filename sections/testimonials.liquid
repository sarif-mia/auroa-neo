{%- liquid
  assign options = section.settings
  assign color_scheme = settings.default_color_scheme
  if options.color_scheme_variant == 'own'
    assign color_scheme = options.color_scheme
  endif
  assign round_level = options.round_level
  assign add_desktop_side_paddings = options.add_desktop_side_paddings
  assign add_mobile_side_paddings = options.add_mobile_side_paddings
  assign section_spacing_top = options.section_spacing_top
  assign section_spacing_bottom = options.section_spacing_bottom
  assign autoplay_mode = options.autoplay_mode
  assign autoplay_interval = options.autoplay_interval
  assign desktop_columns = options.cards_per_slide
  assign desktop_layout = options.desktop_layout
  assign mobile_layout = options.mobile_layout
  assign image = options.image
  assign image_width = options.image_size
  assign enable_overlay = options.enable_overlay
  assign overlay_color = options.overlay_color
  assign body_size = options.body_size
  assign heading_size = options.heading_size
  assign quote_alignment = options.quote_alignment
  assign desktop_quote_alignment = options.desktop_quote_alignment
  assign mobile_quote_alignment = options.mobile_quote_alignment
  assign stars_color = options.stars_color
  assign show_rating = options.show_rating

  assign container_size = options.container_size

  assign caption = options.caption
  assign text = options.text
  assign title = options.title

  assign btn_url = options.btn_url
  assign btn_text = options.btn_text

  assign columns_float = desktop_columns | times: 1.0
  assign slide_base_width = 100
  assign slide_count = section.blocks.size | divided_by: columns_float | ceil
  assign slide_width = slide_base_width | divided_by: columns_float
  assign desktop_space_between_cards = options.desktop_space_between_cards

  if desktop_columns == 3
    assign quote_text_variant = 'small'
  elsif desktop_columns == 2
    assign quote_text_variant = 'medium'
  else
    assign quote_text_variant = 'large'
  endif

  assign quotes_with_background = options.color_testimonials

  assign carousel_type = 'vertical'
  assign slide_type = 'horizontal'

  if desktop_columns == 3 and desktop_layout contains 'bottom'
    assign slide_type = 'vertical'
  endif

  if desktop_layout contains 'bottom'
    assign carousel_type = 'horizontal'
  endif

  assign any_quote_has_product = false
  for block in section.blocks
    if block.settings.quote_product != blank
      assign any_quote_has_product = true
    endif
  endfor

  assign horizontal_card_heigth = 346
  assign vertical_carousel_heigth = 346

  if any_quote_has_product == true
    assign horizontal_card_heigth = 354
    assign vertical_carousel_heigth = 354
  endif

  if desktop_columns == 2
    assign horizontal_card_heigth = 306
    assign vertical_carousel_heigth = 306 | times: 2 | plus: desktop_space_between_cards

    if any_quote_has_product == true
      assign horizontal_card_heigth = 316
      assign vertical_carousel_heigth = 316 | times: 2 | plus: desktop_space_between_cards
    endif
  endif

  if desktop_columns == 3
    assign horizontal_card_heigth = 240
    assign vertical_carousel_heigth = 240 | times: 3 | plus: desktop_space_between_cards | plus: desktop_space_between_cards

    if any_quote_has_product == true
      assign horizontal_card_heigth = 252
      assign vertical_carousel_heigth = 252 | times: 3 | plus: desktop_space_between_cards | plus: desktop_space_between_cards
    endif
  endif

  assign enable_content_slide_in = settings.enable_content_slide_in
  assign enable_image_zoom_out = settings.enable_image_zoom_out

  assign image_class = 'image'
  if enable_image_zoom_out
    assign image_class = image_class | append: ' scroll-trigger animate--zoom-out'
  endif
-%}

{%- liquid
  assign show_background = section.settings.show_background
  assign color_container_background = false

  if show_background == false and settings.default_color_scheme.settings.background != color_scheme.settings.background
    assign color_container_background = true
  endif
-%}

{% capture css %}
  {% style %}
    .section-{{ section.id }}{
      --gsc-space-between-cards: {{ desktop_space_between_cards }}px;
      --gsc-slide-width: {{ slide_width }}%;
      --gsc-quote-height: {{ horizontal_card_heigth }}px;
      --gsc-vertical-carousel-height: {{ vertical_carousel_heigth }}px;
      --gsc-section-spacing-top: var(--gsc-padding-block-{{ section_spacing_top }});
      --gsc-section-spacing-bottom: var(--gsc-padding-block-{{ section_spacing_bottom }});
      --gsc-bg-image-width: {{ image_width }}%;

      {% if enable_overlay %}
        --gsc-overlay-color-rgb: {{ overlay_color.rgb | replace: ' ', ', ' }};
        --gsc-overlay-opacity: {{ overlay_color.alpha }};
      {% endif %}

      {% if show_rating %}
        --gsc-rating-stars-color: {{ stars_color }};
      {% endif %}

      {% if desktop_columns == 1 and carousel_type == 'horizontal' %}
        --gsc-quote-image-width: 28rem;
      {% else %}
        --gsc-quote-image-width: 22rem;
      {% endif %}

      {% if any_quote_has_product == true %}
        --gsc-quote-max-height: 14rem;
      {% else %}
        --gsc-quote-max-height: 16.8rem;
      {% endif %}

      --gsc-quotes-per-slide: {{ desktop_columns }};
      --gsc-columns: 1;
      
      --gsc-quote-alignment: {{mobile_quote_alignment}};
    } 

    @media {% render 'media-queries', screen: 'md' %} {
      .section-{{ section.id }} {
        --gsc-quote-max-height: 19rem;

        --gsc-quote-alignment: {{desktop_quote_alignment}};
        --gsc-columns: {{ desktop_columns }};
      }
      
      .section-{{ section.id }} .slider-grid__slide {
        --gsc-slide-width: 100%;
      }

      .section-{{ section.id }} .shape--nature {
        height: 100%;
      }

      .card-carousel__position-btn-wrap {
        height: 100%;
      }

      .testimonials__body--bottom-carousel .card-carousel__position-btn-wrap {
        height: calc(100% - var(--gsc-section-content-gap, 6.4rem));
      }

      .testimonials__body--bottom-slideshow .card-carousel__position-btn-wrap {
        height: calc(100% - 4.8rem);
      }
    }

    @media {% render 'media-queries', screen: 'lg' %} {
      .section-{{ section.id }} .slider-grid__slide {
        --gsc-slide-width: {{ slide_width }}%;
      }
    }
  {% endstyle %}
{% endcapture %}

{% render 'inline-css-minifier', css: css %}

<div>
  {% style %}.quote-sidebar__quote{--gsc-rating-stars-color: {{ stars_color }};}{% endstyle %}

  {%- if section.blocks.size > 0 -%}
    {%- for block in section.blocks -%}
      {%- if block.settings.link == blank -%}
        {% liquid
          assign class = 'quote-sidebar__quote'
          if block.settings.quote_image != blank or block.settings.quote_product != blank
            assign class = class | append: ' quote-sidebar__quote--with-image'
          endif
        %}

        <sidebar-component
          class='sidebar {% if round_level != 'default' %}round-level-{{round_level}}{% endif %} quote-sidebar color-{{ color_scheme }}'
          id='quote-sidebar-{{block.id}}'
          data-with-overlay='only-desktop'
          data-with-close-on-outside
          data-with-close-on-escape
          data-overlay-important
          data-open-direction='left'
          tabindex='-1'
        >
          <template data-sidebar-template='quote-sidebar-{{block.id}}'>
            <div class='sidebar__body quote-sidebar__body' data-sidebar-body>
              <sidebar-button class='quote-sidebar__close-button-container'>
                <button
                  data-sidebar-button
                  data-sidebar-id='quote-sidebar-{{block.id}}'
                  class='unstyled-button quote-sidebar__close-button-with-scale-hover close-button-with-scale-hover'
                  aria-label='Close'
                ></button>
              </sidebar-button>
              {%- render 'quote',
                class: class,
                block: block,
                text_variant: quote_text_variant,
                is_inside_sidebar: true,
                with_background: quotes_with_background,
                slide_type: slide_type,
                desktop_columns: desktop_columns,
                show_rating: show_rating
              -%}
            </div>
          </template>
        </sidebar-component>
      {%- endif -%}
    {%- endfor -%}
  {%- endif -%}
</div>

{% if request.design_mode %}
  {% style %}
    .mock-quote {
      position: fixed;
      top: 50%;
      bottom: 50%;
      pointer-events: none;
    }
  {% endstyle %}

  <div mock-quotes>
    {%- for quote in section.blocks -%}
      <div class='mock-quote' {{ quote.shopify_attributes }} block-id='{{ quote.id }}'></div>
    {%- endfor -%}
  </div>
{% endif %}

<div class='section-{{ section.id }} {% if round_level != 'default' %}round-level-{{round_level}}{% endif %} testimonials-wrapper section color-{{ color_scheme }} spacing-block {% if add_mobile_side_paddings %}spacing-inline-mobile{% endif %} {% if add_desktop_side_paddings %}spacing-inline-desktop{% endif %} {% if color_container_background == false %}section-background{% endif %}'>
  <div class='container container--{{ container_size }} {% if color_container_background %}container-background{% endif %}'>
    <testimonials-component
      class='testimonials'
      data-section-id='{{ section.id }}'
      data-desktop-columns='{{ desktop_columns }}'
      data-desktop-layout='{{ desktop_layout }}'
      data-mobile-layout='{{ mobile_layout }}'
    >
      <div class='testimonials__body testimonials__body--{{ desktop_layout }} {% if carousel_type == 'vertical' %} testimonials__body--aside-quotes {% endif %}'>
        <div class='testimonials__container {% if desktop_layout contains 'left-quotes' or desktop_layout contains 'right-quotes' %} container container--large {% endif %} {% if slide_count == 1 %} testimonials__container--without-dots {% endif %}'>
          {%- if caption != blank or title != blank or text != blank or btn_text != blank -%}
            <div class='testimonials__content {% if color_container_background == false and add_desktop_side_paddings == false or add_mobile_side_paddings == false  %}spacing-inline-header{% endif %}'>
              {%- if caption != blank -%}
                <div
                  class='caption body-color {% if enable_content_slide_in %}scroll-trigger animate--slide-in{% endif %}'
                  {% if enable_content_slide_in %}
                    style='--gsc-animation-order: 1;'
                  {% endif %}
                >
                  {{ caption }}
                </div>
              {%- endif -%}
              {%- if title != blank -%}
                <h2
                  class='{{ heading_size }} {% if enable_content_slide_in %}scroll-trigger animate--slide-in{% endif %}'
                  {% if enable_content_slide_in %}
                    style='--gsc-animation-order: 2;'
                  {% endif %}
                >
                  {{ title }}
                </h2>
              {%- endif -%}
              {%- if text != blank -%}
                <div
                  class='rte {{ body_size }} {% if title != blank %} body-color {% endif %} testimonials__text body-font-weight-from-global-settings {% if enable_content_slide_in %}scroll-trigger animate--slide-in{% endif %}'
                  {% if enable_content_slide_in %}
                    style='--gsc-animation-order: 3;'
                  {% endif %}
                >
                  {{ text }}
                </div>
              {%- endif -%}
              {%- if btn_text != blank -%}
                <a
                  class='link testimonials__link {% if enable_content_slide_in %}scroll-trigger animate--slide-in{% endif %}'
                  {% if enable_content_slide_in %}
                    style='--gsc-animation-order: 4;'
                  {% endif %}
                  {% if btn_url != blank %}
                    href='{{ btn_url }}'
                  {% endif %}
                  aria-label='{{ btn_text | strip_html | escape }}'
                >
                  <span class='link-parent-for-hover'>
                    <span class='link__text'>{{ btn_text }}</span>
                  </span>
                  {%- render 'icon', icon_name: 'link-chevron', class: 'link__chevron' -%}
                </a>
              {%- endif -%}
            </div>
          {%- endif -%}

          {% if desktop_layout contains 'bottom' %}
            {% liquid
              assign desktop_layout = desktop_layout | split: '-' | last
              assign mobile_layout = mobile_layout | split: '-' | last
              if mobile_layout contains 'column'
                assign mobile_layout = 'grid'
              endif
            %}

            <slider-grid
              class='slider-grid card-carousel--navigation-on-hover {% if desktop_layout contains 'carousel' %}testimonials__carousel-viewport--with-overflow{% endif %} {% if request.design_mode %}is-editor-mode{% endif %}'
              {% if autoplay_mode != 'disabled' %}
                {% if desktop_layout contains 'carousel' %}
                  autoplay-mode='{{autoplay_mode}}'
                  autoplay-interval='{{autoplay_interval}}'
                {% endif %}
                {% if desktop_layout contains 'slideshow' and autoplay_mode != 'seamless' %}
                  autoplay-mode='{{autoplay_mode}}'
                  autoplay-interval='{{autoplay_interval}}'
                {% endif %}
              {% endif %}
              {% if desktop_layout contains 'grid' %}
                desktop-disabled
              {% endif %}
              {% if mobile_layout contains 'column' %}
                mobile-disabled
              {% endif %}
            >
              <div
                slider-grid-track
                class='slider-grid-track slider-grid__d-{{desktop_layout}} slider-grid__m-{{mobile_layout}}'
              >
                {%- for quote in section.blocks -%}
                  <div
                    class='slider-grid__slide {% if enable_content_slide_in %}scroll-trigger animate--slide-in{% endif %}'
                    {% if enable_content_slide_in %}
                      style='--gsc-animation-order: {{forloop.index}};'
                    {% endif %}
                    block-id='{{ quote.id }}'
                    {{ quote.shopify_attributes }}
                    slider-grid-slide
                    {% if mobile_layout == 'slideshow' %}
                      index='{{ forloop.index0 }}'
                    {% endif %}
                  >
                    {% render 'quote',
                      block: quote,
                      quote_alignment: quote_alignment,
                      text_variant: quote_text_variant,
                      with_background: quotes_with_background,
                      slide_type: slide_type,
                      desktop_columns: desktop_columns,
                      show_rating: show_rating
                    %}
                  </div>
                {%- endfor -%}
              </div>

              {% if desktop_layout == 'carousel'
                or desktop_layout == 'slideshow'
                and section.blocks.size > desktop_columns
              %}
                <div class='card-carousel__position-btn-wrap card-carousel__position-btn-wrap--prev'>
                  <button
                    type='button'
                    class='carousel-btn card-carousel__carousel-btn card-carousel__carousel-btn--prev'
                    data-direction='prev'
                    tabindex='0'
                    {% if autoplay_mode != 'seamless' %}
                      disabled
                    {% endif %}
                  >
                    {% render 'icon', icon_name: 'arrow', class: 'carousel-btn__icon x-flip' -%}
                  </button>
                </div>

                <div class='card-carousel__position-btn-wrap card-carousel__position-btn-wrap--next'>
                  <button
                    type='button'
                    class='carousel-btn card-carousel__carousel-btn card-carousel__carousel-btn--next'
                    data-direction='next'
                    tabindex='0'
                  >
                    {%- render 'icon', icon_name: 'arrow', class: 'carousel-btn__icon' -%}
                  </button>
                </div>
              {% endif %}

              {%- if desktop_layout == 'carousel' -%}
                <div
                  class='progress-bar progress-bar--with-background card-carousel__progress-bar {% if mobile_layout != 'carousel-overflow' %}progress-bar--desktop-only{% endif %} {% if enable_content_slide_in %}scroll-trigger animate--slide-in{% endif %}'
                  {% if enable_content_slide_in %}
                    style='--gsc-animation-order: {{ section.blocks.size }};'
                  {% endif %}
                  data-target='scroll'
                >
                  <div class='slider-grid__progress-bar-indicator' slider-grid-progress></div>
                </div>
              {%- endif -%}

              {% if desktop_layout == 'slideshow' %}
                {% render 'dynamic-dots',
                  dots_count: slide_count,
                  visible_dots_count: 5,
                  active_dot_type: 'dot',
                  target: 'custom',
                  custom_class: 'slider-grid__dots slider-grid__dots--desktop-visible'
                %}
              {% endif %}

              {% if mobile_layout == 'slideshow' %}
                {% render 'dynamic-dots',
                  dots_count: section.blocks.size,
                  visible_dots_count: 5,
                  active_dot_type: 'dot',
                  target: 'custom',
                  custom_class: 'slider-grid__dots'
                %}
              {% endif %}
            </slider-grid>
          {% endif %}

          {% if desktop_layout contains 'quotes' %}
            {% liquid
              assign mobile_layout = mobile_layout | split: '-' | last
              if mobile_layout contains 'column'
                assign mobile_layout = 'grid'
              endif
            %}

            <carousel-component
              class='carousel testimonials__carousel testimonials__carousel--desktop'
              data-contain-scroll='trimSnaps'
              data-skip-snaps
              data-section-id='{{ section.id }}'
              {% if carousel_type != 'horizontal' %}
                data-axis='y'
              {% else %}
                data-axis='x'
              {% endif %}
              {% if autoplay_mode == 'one_at_time' %}
                data-autoplay-mode='one_at_time'
                data-autoplay-interval='{{autoplay_interval}}'
              {% endif %}
              {% if autoplay_mode == 'seamless' and desktop_layout == 'bottom-carousel' %}
                data-loop
                data-drag-free
                data-autoplay-mode='seamless'
                data-autoplay-interval='{{autoplay_interval}}'
              {% endif %}
              {% if desktop_layout contains 'carousel' %}
                data-drag-free
              {% endif %}
              with-hover-pause
              data-draggable
              data-align='start'
              data-slides-to-scroll='{{desktop_columns}}'
            >
              <div
                class='carousel__viewport embla testimonials__carousel-viewport {% if carousel_type != 'horizontal' %}carousel__viewport--vertical{% endif %} {% if desktop_layout contains 'carousel' %}testimonials__carousel-viewport--with-overflow{% endif %}'
                data-carousel-viewport
              >
                <div class='carousel__container' data-carousel-container>
                  {%- for quote in section.blocks -%}
                    <div
                      class='carousel__slide {% if enable_content_slide_in and carousel_type == 'horizontal' %}scroll-trigger animate--slide-in{% endif %}'
                      {% if enable_content_slide_in and carousel_type == 'horizontal' %}
                        style='--gsc-animation-order: {{forloop.index}};'
                      {% endif %}
                      {{ quote.shopify_attributes }}
                      block-id='{{ quote.id }}'
                    >
                      {% render 'quote',
                        block: quote,
                        quote_alignment: quote_alignment,
                        text_variant: quote_text_variant,
                        with_background: quotes_with_background,
                        slide_type: slide_type,
                        desktop_columns: desktop_columns,
                        show_rating: show_rating
                      %}
                    </div>
                  {%- endfor -%}
                </div>
              </div>

              <carousel-dots
                class='solid-dots-carousel testimonials__solid-dots-carousel {% if carousel_type != 'horizontal' %} solid-dots-carousel--vertical {% endif %} {% if enable_content_slide_in %}scroll-trigger animate--slide-in{% endif %}'
                {% if enable_content_slide_in %}
                  style='--gsc-animation-order: {{ section.blocks.size }};'
                {% endif %}
                data-contain-scroll='keepSnaps'
                data-align='center'
                {% if carousel_type != 'horizontal' %}
                  data-axis='y'
                {% else %}
                  data-axis='x'
                {% endif %}
              >
                <div class='solid-dots-carousel__viewport embla' data-carousel-viewport>
                  <div
                    class='solid-dots-carousel__container'
                    data-carousel-container
                  >
                    {%- for slide in (1..slide_count) -%}
                      <div
                        class='solid-dots-carousel__solid-dot {% if forloop.index == 1 %}is-primary{% endif %}'
                        tabindex='0'
                        data-carousel-dot
                        data-dot-index='{{ forloop.index0 }}'
                        data-carousel-dot
                      >
                        <div class='solid-dots-carousel__solid-dot-circle'></div>
                      </div>
                    {%- endfor -%}
                  </div>
                </div>
              </carousel-dots>
            </carousel-component>

            <slider-grid
              class='slider-grid testimonials__carousel--tablet testimonials__carousel-viewport--with-overflow {% if request.design_mode %}is-editor-mode{% endif %}'
              {% if autoplay_mode != 'disabled' %}
                autoplay-mode='{{autoplay_mode}}'
                autoplay-interval='{{autoplay_interval}}'
              {% endif %}
            >
              <div
                slider-grid-track
                class='slider-grid-track slider-grid__d-slideshow slider-grid__m-{{mobile_layout}}'
              >
                {%- for quote in section.blocks -%}
                  <div
                    class='slider-grid__slide {% if enable_content_slide_in %}scroll-trigger animate--slide-in{% endif %}'
                    {% if enable_content_slide_in %}
                      style='--gsc-animation-order: {{ forloop.index }};'
                    {% endif %}
                    block-id='{{ quote.id }}'
                    {{ quote.shopify_attributes }}
                    slider-grid-slide
                    {% if mobile_layout == 'slideshow' %}
                      index='{{ forloop.index0 }}'
                    {% endif %}
                  >
                    {% render 'quote',
                      block: quote,
                      quote_alignment: quote_alignment,
                      text_variant: quote_text_variant,
                      with_background: quotes_with_background,
                      slide_type: 'horizontal',
                      desktop_columns: 1,
                      show_rating: show_rating
                    %}
                  </div>
                {%- endfor -%}
              </div>

              <div
                class='progress-bar progress-bar--with-background card-carousel__progress-bar {% if enable_content_slide_in %}scroll-trigger animate--slide-in{% endif %}'
                {% if enable_content_slide_in %}
                  style='--gsc-animation-order: {{ section.blocks.size }};'
                {% endif %}
                data-target='scroll'
              >
                <div class='slider-grid__progress-bar-indicator' slider-grid-progress></div>
              </div>
            </slider-grid>

            <slider-grid
              class='slider-grid testimonials__carousel--mobile {% if request.design_mode %}is-editor-mode{% endif %}'
              {% if autoplay_mode != 'disabled' %}
                autoplay-mode='{{autoplay_mode}}'
                autoplay-interval='{{autoplay_interval}}'
              {% endif %}
              {% if mobile_layout contains 'grid' %}
                mobile-disabled
              {% endif %}
            >
              <div
                slider-grid-track
                class='slider-grid-track slider-grid__d-slideshow slider-grid__m-{{mobile_layout}}'
              >
                {%- for quote in section.blocks -%}
                  <div
                    class='slider-grid__slide {% if enable_content_slide_in %}scroll-trigger animate--slide-in{% endif %}'
                    {% if enable_content_slide_in %}
                      style='--gsc-animation-order: {{ forloop.index }};'
                    {% endif %}
                    block-id='{{ quote.id }}'
                    {{ quote.shopify_attributes }}
                    slider-grid-slide
                    {% if mobile_layout == 'slideshow' %}
                      index='{{ forloop.index0 }}'
                    {% endif %}
                  >
                    {% render 'quote',
                      block: quote,
                      quote_alignment: quote_alignment,
                      text_variant: quote_text_variant,
                      with_background: quotes_with_background,
                      slide_type: 'vertical',
                      desktop_columns: 1,
                      show_rating: show_rating
                    %}
                  </div>
                {%- endfor -%}
              </div>

              {% if mobile_layout == 'slideshow' %}
                {% render 'dynamic-dots',
                  dots_count: section.blocks.size,
                  visible_dots_count: 5,
                  active_dot_type: 'dot',
                  target: 'custom',
                  custom_class: 'slider-grid__dots'
                %}
              {% endif %}
            </slider-grid>
          {% endif %}
        </div>

        {%- if options.desktop_layout != 'bottom-grid' -%}
          {%- if image != blank and image_width > 0 -%}
            <div class='testimonials__image testimonials__image--{{ options.desktop_layout }}'>
              <img
                {% render 'image-attributes', image: image, class: image_class %}
              >
              {% if enable_overlay %}
                <div class='overlay'></div>
              {% endif %}
            </div>
          {%- endif -%}
        {%- endif -%}
      </div>
    </testimonials-component>
  </div>
</div>

{% render 'save-section-data-in-global-scope', section: section %}

{% schema %}
{
  "name": "t:sections.testimonials.name",
  "tag": "section",
  "blocks": [
    {
      "type": "quote",
      "name": "t:sections.testimonials.name_for_quote_block",
      "settings": [
        {
          "type": "range",
          "id": "rating",
          "min": 1,
          "max": 5,
          "step": 0.5,
          "default": 5,
          "label": "t:sections.testimonials.label_for_rating_setting_in_quote_block"
        },
        {
          "type": "richtext",
          "id": "text",
          "default": "<p>Add authentic testimonials of your customers talking about your products or brand in their own words, so that future customers can identify with them and their needs. Testimonials provide social proof and build trust with customers. By reading about the positive experiences of other customers, potential customers are more likely to take the next step and to buy from you. What's more, customer testimonials are high-quality content that is relevant to your target audience, so they can help to boost your SEO.</p>",
          "label": "t:sections.testimonials.label_for_text_setting_in_quote_block"
        },
        {
          "type": "image_picker",
          "id": "author_image",
          "label": "t:sections.testimonials.label_for_author_image_setting_in_quote_block"
        },
        {
          "type": "text",
          "id": "author_name",
          "default": "Author name",
          "label": "t:sections.testimonials.label_for_author_name_setting_in_quote_block"
