{%- liquid
  assign options = section.settings

  assign color_scheme = settings.default_color_scheme
  if options.color_scheme_variant == 'own'
    assign color_scheme = options.color_scheme
  endif
  assign round_level = options.round_level
  assign container_size = options.container_size
  assign section_spacing_top = options.section_spacing_top
  assign section_spacing_bottom = options.section_spacing_bottom
  assign add_desktop_side_paddings = options.add_desktop_side_paddings
  assign add_mobile_side_paddings = options.add_mobile_side_paddings

  assign space_between_cards = options.space_between_cards
  assign content_paddings_size = options.content_paddings_size

  assign heading = options.heading
  assign heading_size = options.heading_size
  assign heading_alignment = options.heading_alignment

  assign image_position = options.image_position
  assign image_width = options.image_width
  assign card_background = options.card_background
  assign cards_per_row = options.cards_per_row
  assign markers_style = options.markers_style
  assign show_navigation_arrows = options.show_navigation_arrows

  assign content_alignment = options.content_alignment
  assign desktop_img_ratio = options.desktop_img_ratio
  assign mobile_img_ratio = options.mobile_img_ratio

  assign enable_content_slide_in = settings.enable_content_slide_in
  assign enable_image_zoom_out = settings.enable_image_zoom_out

  assign slider_image_class = 'image-slider__image'
  assign target_image_class = 'shape__target-image'
  if enable_image_zoom_out
    assign slider_image_class = slider_image_class | append: ' scroll-trigger animate--zoom-out'
    assign target_image_class = target_image_class | append: ' scroll-trigger animate--zoom-out'
  endif
-%}

{%- liquid
  assign show_background = section.settings.show_background
  assign color_container_background = false

  if show_background == false and settings.default_color_scheme.settings.background != color_scheme.settings.background
    assign color_container_background = true
  endif
-%}

{% capture css %}
    {% style %}
      .section-{{section.id}} {
        --gsc-img-ratio: {{ mobile_img_ratio | times: 100 }}%;
        --gsc-section-spacing-top: var(--gsc-padding-block-{{ section_spacing_top }});
        --gsc-section-spacing-bottom: var(--gsc-padding-block-{{ section_spacing_bottom }});
        --gsc-image-slider-heading-alignment: {{ heading_alignment }};
        --gsc-space-between-cards: var(--gsc-gap-{{ space_between_cards }});  
        --gsc-content-paddings: var(--gsc-content-padding-{{ content_paddings_size }});
      }

      @media {% render 'media-queries', screen: 'md' %} { 
        .section-{{section.id}} {
          --gsc-img-ratio: {{ desktop_img_ratio | times: 100 }}%;
          --gsc-image-flex: {{ image_width  }};  
          --gsc-slide-width: {{ cards_per_row }}%;  
        }
      }
  
    {% endstyle %}
{% endcapture %}

{% render 'inline-css-minifier', css: css %}

{% if show_navigation_arrows and heading != blank %}
  {% capture arrows %}
    
    <div class='timeline__arrows {% if heading_alignment == 'right' %}timeline__arrows--on-left{% endif %} {% if enable_content_slide_in %}scroll-trigger animate--slide-in{% endif %}'>
      <carousel-button
        class='carousel-btn'
        data-direction='prev'
        tabindex='0'
        disabled
      >
        {% render 'icon', icon_name: 'arrow', class: 'carousel-btn__icon x-flip' -%}
      </carousel-button>

      <carousel-button
        class='carousel-btn'
        data-direction='next'
        tabindex='0'
      >
        {%- render 'icon', icon_name: 'arrow', class: 'carousel-btn__icon' -%}
      </carousel-button>
    </div>
  {% endcapture %}
{% endif %}

{% capture markers %}
  <carousel-dots
    class='carousel timeline__markers'
    data-contain-scroll='trimSnaps'
    data-align='center'
    data-axis='x'
    data-draggable
    data-drag-free  
  >
    <div class='embla' data-carousel-viewport>
      <div class='timeline__markers-carousel-container' data-carousel-container data-timeline-markers>
        
        {%- for block in section.blocks -%}
          <div
            class='timeline__marker {% if forloop.index == 1 %}is-primary{% endif %}'
            tabindex='0'
            data-dot-index='{{ forloop.index0 }}'
            data-progress-dot
            data-carousel-dot
          >
            {% if markers_style != 'labels' %}
              <div class='timeline__marker-dot'>
                <div class='timeline__marker-dot-inner'></div>
              </div>
            {% endif %}

            {% if markers_style != 'dots' %}
              <p class='timeline__marker-label'>{{ block.settings.marker_label }}</p>
            {% endif %}
          </div>
        {%- endfor -%}

      </div>
    </div>
  </carousel-dots>
{% endcapture %}

<timeline-component class='timeline color-{{ color_scheme }} {% if round_level != 'default' %}round-level-{{round_level}}{% endif %} section-{{ section.id }} spacing-block {% if add_mobile_side_paddings %}spacing-inline-mobile{% endif %} {% if add_desktop_side_paddings %}spacing-inline-desktop{% endif %} {% if color_container_background == false %}section-background{% endif %}'>
  <div class='container container--{{ container_size }} {% if color_container_background %}container-background{% endif %}'>
    {% if heading != blank %}
      <h2
        class='image-slider__heading {{ heading_size }} {% if color_container_background == false and add_desktop_side_paddings == false or add_mobile_side_paddings == false  %}spacing-inline-header{% endif %} {% if enable_content_slide_in %}scroll-trigger animate--slide-in{% endif %}'
        {% if enable_content_slide_in %}
          style='--gsc-animation-order: 1;'
        {% endif %}
      >
        {{ heading }}
      </h2>
    {% endif %}

    <carousel-component
      class='card-carousel timeline__carousel'
      data-section-id='{{ section.id }}'
      data-align='start'
      data-axis='x'
      data-contain-scroll='trimSnaps'
      data-draggable
    >
      <div class='card-carousel__viewport embla' data-carousel-viewport>
        <div class='carousel__container' data-carousel-container>
          {%- for block in section.blocks -%}
            {% liquid
              assign media_type = block.settings.media_type
              assign image = block.settings.image
              assign video = block.settings.video

              assign subheading = block.settings.subheading
              assign heading = block.settings.heading
              assign body = block.settings.body
              assign heading_size = block.settings.heading_size
              assign body_size = block.settings.body_size

              assign button_text = block.settings.button_text
              assign button_link = block.settings.button_link
              assign button_style = block.settings.button_style
            %}

            <div
              class='carousel__slide timeline__slide {% if image_position == 'right' %}timeline__slide--with-image-on-right-side{% endif %}'
              block-id='{{ block.id }}'
              {{ block.shopify_attributes }}
            >
              <div class='timeline__image-wrapper'>
                <div class='shape shape--nature'>
                  {%- if media_type == 'video' and video != blank -%}
                    {% render 'video-with-alt',
                      video: video,
                      class: 'shape__target-image',
                      autoplay: true,
                      loop: true,
                      muted: true,
                      controls: false,
                      loading: 'lazy'
                    %}
                  {%- elsif media_type == 'image' and image != blank -%}
                    <img
                      {% render 'image-attributes',
                        image: image,
                        size: 'medium',
                        class: target_image_class,
                        is_eager_loading: true
                      %}
                    >
                  {% else %}
                    {{ 'image' | placeholder_svg_tag: 'placeholder-image shape__target-image' }}
                  {%- endif -%}
                </div>
              </div>

              <div class='timeline__content-wrapper {% if card_background != 'none' %}timeline__content-wrapper--bg-{{ card_background }}{% endif %}'>
                <div class='timeline__content image-slider__content--with-{{ content_alignment }}-alignment'>
                  {%- if subheading != blank -%}
                    <div
                      class='caption body-color {% if enable_content_slide_in %}scroll-trigger animate--slide-in{% endif %}'
                      {% if enable_content_slide_in %}
                        style='--gsc-animation-order: 1;'
                      {% endif %}
                    >
                      {{ subheading }}
                    </div>
                  {%- endif -%}

                  {%- if heading != blank -%}
                    <h2
                      class='{{ heading_size }} image-slider__title {% if enable_content_slide_in %}scroll-trigger animate--slide-in{% endif %}'
                      {% if enable_content_slide_in %}
                        style='--gsc-animation-order: 2;'
                      {% endif %}
                    >
                      {{ heading }}
                    </h2>
                  {%- endif -%}

                  {%- if body != blank -%}
                    <div
                      class='image-slider__text rte {{ body_size }} {% if heading != blank %} body-color {% endif %} body-font-weight-from-global-settings {% if enable_content_slide_in %}scroll-trigger animate--slide-in{% endif %}'
                      {% if enable_content_slide_in %}
                        style='--gsc-animation-order: 3;'
                      {% endif %}
                    >
                      {{ body }}
                    </div>
                  {%- endif -%}

                  {%- if button_text != blank -%}
                    {%- if button_style == 'link' -%}
                      <a
                        class='link image-slider__btn {% if enable_content_slide_in %}scroll-trigger animate--slide-in{% endif %}'
                        {% if enable_content_slide_in %}
                          style='--gsc-animation-order: 4;'
                        {% endif %}
                        href='{{ button_link }}'
                        aria-label='{{ button_text }}'
                      >
                        <span class='link-parent-for-hover'>
                          <span class='link__text'>{{ button_text }}</span>
                        </span>
                        {%- render 'icon', icon_name: 'link-chevron', class: 'link__chevron' -%}
                      </a>
                    {%- else -%}
                      <a
                        class='btn btn--{{ button_style }} image-slider__btn {% if enable_content_slide_in %}scroll-trigger animate--slide-in{% endif %}'
                        {% if enable_content_slide_in %}
                          style='--gsc-animation-order: 5;'
                        {% endif %}
                        href='{{ button_link }}'
                        aria-label='{{- button_text -}}'
                      >
                        {{- button_text -}}
                      </a>
                    {%- endif -%}
                  {%- endif -%}

                  {% if button_text == blank and button_link != blank %}
                    <a
                      class='image-slider__mock-link'
                      href='{{ button_link }}'
                      aria-label='{{ button_text }}'
                    >
                    </a>
                  {% endif %}
                </div>
              </div>
            </div>
          {%- endfor -%}
        </div>
      </div>

      {% if show_navigation_arrows and heading != blank %}
        {{ arrows }}
      {% endif %}

      {{ markers }}
    </carousel-component>
  </div>
</timeline-component>

